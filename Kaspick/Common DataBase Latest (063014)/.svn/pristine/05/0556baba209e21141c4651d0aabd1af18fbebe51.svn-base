CREATE PROCEDURE [dbo].USP_PP_GetValidationEngineBeneficiaryAccountPaymentActualFlag                        
-- paremeters here                                
@UserID INT,
@Type Bit =1--auto   

AS                                
	BEGIN TRY        
        
		--  Initial Set statements  --        
		SET NOCOUNT ON;        
		SET LOCK_TIMEOUT                30000;   -- 30 seconds  
		
		
		---Declare Variable
		DECLARE @RuleID INT      
		
		
		---Assigning value to Variable
		SELECT @RuleID = RuleID
		FROM TBL_PP_ValidationRule
		WHERE RuleName = 'Pays Actual Account'
			AND RuleCategory = 'Beneficiary payment'                        
                                
                
            
	SELECT                                       
	PaymentType,                                
	ScheduleID,                                 
	@RuleID AS RuleID,                                
	'PayActualNI' AS Attribute,          
	CASE AccountPaysActual WHEN 'FALSE' THEN 0
						   WHEN 'TRUE'  THEn 1 END  AS ActualValue                                    
	FROM                                     
	TBL_PP_STG_InnoTrustValidationEngineInput         
	WHERE PaymentType = 'Beneficiarypayment'
	AND UserId = @UserID

          
END TRY          
BEGIN CATCH

	SELECT ERROR_MESSAGE() AS ErrorMessage
	
END CATCH 

SET NOCOUNT OFF;