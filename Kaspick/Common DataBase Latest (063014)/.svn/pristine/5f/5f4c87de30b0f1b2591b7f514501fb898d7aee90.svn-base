CREATE FUNCTION [dbo].[Fn_ReportGetTerminationFactor] (
	@TaxYear INT
	,@MatureDate DATETIME
	,@FinalPaymentType INT
	,@MatureReason INT
	)
RETURNS FLOAT
AS
BEGIN
	DECLARE @ReturnValue FLOAT
	DECLARE @EndDate DATETIME

	IF @MatureDate IS NULL
		SET @ReturnValue = 1
	ELSE
		IF year(@MatureDate) <> @TaxYear
			SET @ReturnValue = 1
		ELSE
			IF @FinalPaymentType = 1
				SET @ReturnValue = 1 - dbo.Fn_ReportGetDateProrate(@MatureDate)
			ELSE
			BEGIN
				BEGIN
					IF @MatureReason = 2
						OR @MatureReason = 3
						SET @EndDate = dateadd(day, 1, @MatureDate) --Include final day  
					ELSE
						IF @MatureReason = 1
							SET @EndDate = @MatureDate --death, Exclude final day  
						ELSE
							SET @EndDate = @MatureDate --Default(exclude final day)  
				END

				IF year(@EndDate) <> year(@MatureDate)
					SET @ReturnValue = 1
				ELSE
					SET @ReturnValue = 1 - dbo.Fn_ReportGetDateProrate(@EndDate)
			END

	RETURN @ReturnValue
END
