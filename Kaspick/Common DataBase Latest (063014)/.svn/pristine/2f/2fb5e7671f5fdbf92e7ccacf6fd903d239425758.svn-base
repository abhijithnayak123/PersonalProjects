CREATE PROCEDURE [dbo].[USP_PP_ReportGetContactRule] @RuleType AS VARCHAR(10)
AS
SET NOCOUNT ON

BEGIN
	SELECT DISTINCT ContactID
		,CustomerAccountNumber
	FROM TBL_PP_ContactRule
	WHERE IsExclusion = CASE 
			WHEN @RuleType = 'Exclusion'
				THEN 1
			ELSE IsExclusion
			END
		AND IsException = CASE 
			WHEN @RuleType = 'Exception'
				THEN 1
			ELSE IsException
			END
		AND CASE 
			WHEN @RuleType = 'Payment'
				THEN DaysValue
			ELSE - 9999
			END = CASE 
			WHEN @RuleType = 'Payment'
				AND DaysValue <> 0
				THEN daysvalue
			ELSE - 9999
			END
	ORDER BY CustomerAccountNumber
		,ContactID
END
GO


