CREATE PROCEDURE [dbo].[USP_PP_GetValidationEngineBeneficiaryStatus]
	-- paremeters here                                
	@UserID INT
	,@Type BIT = 1 --auto
AS
BEGIN TRY
	--  Initial Set statements  --        
	SET NOCOUNT ON;
	SET LOCK_TIMEOUT 30000;-- 30 seconds  

	---Declare Variable
	DECLARE @RuleID INT

	---Assigning value to Variable
	SELECT @RuleID = RuleID
	FROM TBL_PP_ValidationRule
	WHERE RuleName = 'Beneficiary inactive'
		AND RuleCategory = 'Beneficiary payment'

	SELECT PaymentType
		,StgData.ScheduleID
		,@RuleID AS RuleID
		,'BeneStatus' AS Attribute
		,(
			CASE 
				WHEN (synBene.ContactID = synBene.PayeeID)
					THEN synBene.ActiveFlag
				ELSE (
						SELECT TOP 1 ActiveFlag
						FROM SYN_IT_BeneficiaryDistributions
						WHERE InstructionID = synBene.instructionID
							AND PayeeID = synBene.ContactID
						)
				END
			) AS ActualValue
	FROM TBL_PP_STG_InnoTrustValidationEngineInput StgData
	INNER JOIN SYN_IT_BeneficiaryDistributions synBene ON StgData.DistributionID = synBene.BeneficiaryDistributionID
	WHERE PaymentType IN (
			'Beneficiarypayment'
			,'PGCalcImport'
			)
		AND UserID = @UserID
END TRY

BEGIN CATCH
	SELECT ERROR_MESSAGE() AS ErrorMessage
END CATCH

SET NOCOUNT OFF;
