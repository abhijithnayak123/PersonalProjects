CREATE PROCEDURE [dbo].[USP_SIT_GetEBRHeader] @ValuationID INT
	,@PeriodEndDate DATETIME
AS
BEGIN
	SET NOCOUNT ON;
	SET LOCK_TIMEOUT 30000;-- 30 seconds    

	--  Variable Declarations  --   
	--  Temp tables, Cursors, Table Variables  --    
	DECLARE @EndDate DATETIME
	DECLARE @StartDate DATETIME

	SET @EndDate = @PeriodEndDate
	SET @StartDate = CAST((STR(YEAR(@EndDate)) + '/' + STR(MONTH(@EndDate)) + '/1') AS DATETIME)

	SELECT LTRIM(RTRIM(ISNULL(AccMas.CustomerDescriptionLine1, '') + '' + ISNULL(AccMas.CustomerDescriptionLine2, '') + '' + ISNULL(AccMas.CustomerDescriptionLine3, '') + '' + ISNULL(AccMas.CustomerDescriptionLine4, ''))) AS AccountFullName
		,AccMas.CustomerAccountNumber
		,AccMas.ExternalCustomerID AS AccountID
		,PVal.AccountType
		,@StartDate AS StartDate
		,@EndDate AS EndDate
	FROM SYN_IT_AccountMaster AccMas
	INNER JOIN TBL_PV_Valuation PVal
		ON AccMas.CustomerAccountNumber = PVal.CustomerAccountNumber
	WHERE PVal.ValuationID = @ValuationID

	SET NOCOUNT OFF;
END
