CREATE PROCEDURE [dbo].[USP_PP_GetValidationEngineBeneficiaryReadyForPaymentFlag]                  
-- paremeters here                                
@UserID INT,
@Type Bit =1--auto 

AS                                
	BEGIN TRY        
        
		--  Initial Set statements  --        
		SET NOCOUNT ON;        
		SET LOCK_TIMEOUT                30000;   -- 30 seconds  
		
		
		---Declare Variable
		DECLARE @RuleID INT  
		                
		---Assigning value to Variable
		SELECT @RuleID = RuleID
		FROM TBL_PP_ValidationRule
		WHERE RuleName = 'Ready for Payments'' flag is unchecked'
			AND RuleCategory = 'Beneficiary payment' 
			
			
	
		---Return data
		SELECT PaymentType
			,ScheduleID
			,@RuleID AS RuleID
			,'ReadyforPayments' AS Attribute
			,CASE ReadyForPayments
				WHEN 'FALSE'
					THEN 0
				WHEN 'TRUE'
					THEN 1
				END AS ActualValue
		FROM TBL_PP_STG_InnoTrustValidationEngineInput
		WHERE PaymentType IN (
				'Beneficiarypayment'
				,'PGCalcImport'
				)
			AND UserId = @UserID

  
END TRY          
BEGIN CATCH

	SELECT ERROR_MESSAGE() AS ErrorMessage
	
END CATCH   
  
SET NOCOUNT OFF;
  