CREATE FUNCTION [dbo].[FN_TrimDecimalValue](@DecimalValue VARCHAR(50))
RETURNS VARCHAR(50)
AS
BEGIN
	RETURN REPLACE(RTRIM(REPLACE(REPLACE(LTRIM(RTRIM(REPLACE(@DecimalValue, '0', ' '))), ' ', '0'), '.', ' ')), ' ', '.')
END
GO
