CREATE PROCEDURE [dbo].[USP_PV_GetLastValuationGiftAddition] (@ValuationXML XML)
AS
BEGIN
	--  Initial Set statements  --    
	SET NOCOUNT ON;
	SET LOCK_TIMEOUT 30000;-- 30 seconds 

	SELECT TransactionID
		,VGTrans.ValuationID
		,MatchKey
		,MatchStatus
		,MatchComment
		,OrgID
		,OrgAccount1
		,GiftDate
		,GiftType
		,GiftAmount
		,MarketValue
		,MarketValueDate
		,GiftStatus
		,GiftKey
		,AccountClosedDate
		,Distributions
		,PersonGiftMapID
		,Association
		,PersonID
		,PersonName
		,LastName
		,FirstName
		,SSN
		,BirthDate
		,PersonStatus
		,DeathDate
	FROM TBL_PV_ValuationGiftwrapTransaction VGTrans
	INNER JOIN (
		SELECT XMLInput.Item.value('@ValuationID[1]', 'INT') AS ValuationID
		FROM @ValuationXML.nodes('//ValuationCollection/InsertList/Valuation') AS XMLInput(Item)
		) XmlInput
		ON XmlInput.ValuationID = VGTrans.ValuationID
			AND GiftStatus = 'Current'

	SET NOCOUNT OFF;
END
