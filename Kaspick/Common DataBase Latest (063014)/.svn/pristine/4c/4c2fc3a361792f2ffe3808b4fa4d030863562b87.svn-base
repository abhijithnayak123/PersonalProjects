CREATE PROCEDURE [dbo].[USP_PP_ReportGetPaymentProcessed] @OptionType AS VARCHAR(20)
AS
SET NOCOUNT ON

BEGIN
	IF @OptionType = 'ManagerCode'
	BEGIN
		SELECT DISTINCT PaymtExport.ManagerCode
		FROM TBL_PP_ARCH_PaymentExport PaymtExport
		--INNER JOIN TBL_PP_ManagerRule TMR ON TMR.ManagerCode = PaymtExport.ManagerCode
		ORDER BY PaymtExport.ManagerCode
	END

	IF @OptionType = 'CustomerAccountNumber'
	BEGIN
		SELECT DISTINCT CustomerAccountNumber
		FROM TBL_PP_ARCH_PaymentExport
		ORDER BY CustomerAccountNumber
	END

	IF @OptionType = 'Contact'
	BEGIN
		SELECT DISTINCT PaymtExport.ContactID
			,PaymtExport.ManagerCode
			,PaymtExport.CustomerAccountNumber
		FROM TBL_PP_ARCH_PaymentExport PaymtExport
		--INNER JOIN TBL_PP_ContactRule TCR ON PaymtExport.ContactID = TCR.ContactID
		--	AND TCR.CustomerAccountNumber = PaymtExport.CustomerAccountNumber
		WHERE PaymtExport.IsDeleted = 0
		ORDER BY PaymtExport.ManagerCode
			,PaymtExport.CustomerAccountNumber
			,PaymtExport.ContactID
	END
END
GO


