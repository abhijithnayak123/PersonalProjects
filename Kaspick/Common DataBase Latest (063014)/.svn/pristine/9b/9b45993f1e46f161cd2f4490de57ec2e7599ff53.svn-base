CREATE PROCEDURE [dbo].USP_PP_GetReportList (@SourceType VARCHAR(50))
AS
BEGIN
	SELECT ReportName
		,ReportTitle
		,ReportDescription
		,ReportFields
		,ReportOrder
		,ReportParameters
	FROM TBL_PP_ReportList
	WHERE IsActive = 1
		AND SourceType = @SourceType
	ORDER BY ReportTitle 
END
