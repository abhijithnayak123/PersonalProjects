CREATE PROCEDURE dbo.[USP_IT_GetCalcEngineSecurityTypeCode] @XmlInput XML
AS
BEGIN TRY
	--  Initial Set statements  --      
	SET NOCOUNT ON;
	SET LOCK_TIMEOUT 30000;-- 30 seconds 

	SELECT DISTINCT SecTran.CustomerAccountNumber
		,MstIdx.Cusip
		,MstIdx.SecurityTypeCode
	FROM SYN_IT_SecurityTransaction SecTran
	INNER JOIN SYN_IT_MasterSecIndex MstIdx
		ON SecTran.ISIN = MstIdx.ISIN
	--INNER JOIN SYN_IT_SecurityCharacteristicsCodes secCodes
	--	ON MstIdx.SecurityTypeCode = secCodes.SecurityTypeCode
	INNER JOIN (
		SELECT x.Item.value('@CustomerAccountNumber[1]', 'varchar(14)') AS CustomerAccountNumber
			,x.Item.value('@CUSIP[1]', 'varchar(14)') AS Cusip
		FROM @XmlInput.nodes('//GiftDetailCollection/GiftDetail') AS x(Item)
		) TmpXml
		ON SecTran.CustomerAccountNumber = TmpXml.CustomerAccountNumber
			AND MstIdx.Cusip = TmpXml.Cusip
END TRY

BEGIN CATCH
	SELECT ERROR_MESSAGE() AS ErrorMessage
END CATCH
