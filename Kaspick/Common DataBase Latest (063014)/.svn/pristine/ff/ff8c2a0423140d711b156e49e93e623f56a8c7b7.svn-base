CREATE PROCEDURE [dbo].[USP_PP_GetPolicyDimensionValue] (
	@DimensionFullName VARCHAR(50)
	,@Datatype VARCHAR(10) OUTPUT
	,@PolicyDimensionID INT OUTPUT
	)
AS
BEGIN TRY
	--  Initial Set statements  --    
	SET NOCOUNT ON;

	SELECT @Datatype = DataType
		,@PolicyDimensionID = PolicyDimensionID
	FROM TBL_PolicyDimension
	WHERE FullName = @DimensionFullName
END TRY

BEGIN CATCH
	SELECT ERROR_NUMBER() AS ErrorNumber
		,ERROR_MESSAGE() AS ErrorMessage
END CATCH
