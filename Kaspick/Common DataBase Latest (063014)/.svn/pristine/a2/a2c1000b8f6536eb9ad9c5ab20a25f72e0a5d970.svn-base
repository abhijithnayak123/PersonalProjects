CREATE PROCEDURE [dbo].[USP_PP_GetPolicyDimensionDropDown] (@PolicyDimensionFullName VARCHAR(100))
AS
BEGIN
	SELECT DropDownText As DDTEXT
		,PolicyDropDownID As DDVALUE
	FROM TBL_PolicyDropDown PolicyDropDown
	INNER JOIN TBL_PolicyDimension PolicyDimension ON PolicyDimension.PolicyDimensionID = PolicyDropDown.PolicyDimensionID
	WHERE PolicyDimension.FullName = @PolicyDimensionFullName
END
