CREATE PROCEDURE [dbo].[USP_PP_GetValidationEngineRule] @PaymentStatus VARCHAR(10)
AS
BEGIN
	--  Initial Set statements  --    
	SET NOCOUNT ON;
	SET LOCK_TIMEOUT 30000;-- 30 seconds    

	-- Body of procedure  --    
	SELECT ValRule.RuleID
		,ValRule.RuleCategory
		,ValRule.RuleName
		,ValRule.ExecutionOrder
		,ValRule.ResultType
		,ValRule.DisplayMessage
		,ValRule.RuleLeadTime
		,ValRule.IsActive
		,ValRule.StopValidationIfFails
		,ValRule.SPName
		,VAlRule.Invokemethod
		,ValRuleAttrib.AttributeID
		,ValRuleAttrib.Attribute
		,ValRuleAttrib.ExpectedValue
		,ValRuleAttrib.EvaluationOrder
		,ValRuleAttrib.OperatorType
		,ValRuleAttrib.Datatype
	FROM TBL_PP_ValidationRule ValRule
	INNER JOIN TBL_PP_ValidationRuleAttribute ValRuleAttrib
		ON ValRule.RuleID = ValRuleAttrib.RuleID
			--13-Jan-14	Niveidtha: Updated the where clause 
			AND ValRule.IsActive = 1
			AND ValRule.PaymentStatus = CASE 
				WHEN @PaymentStatus = 'All'
					THEN PaymentStatus
				ELSE @PaymentStatus
				END
	ORDER BY ExecutionOrder
END

SET NOCOUNT OFF;