CREATE PROCEDURE [dbo].[USP_PP_GetValidationEngineBeneficiaryPaymentCondition] @UserID INT
	,@Type BIT = 1 --auto 
AS
BEGIN TRY
	--  Initial Set statements  --        
	SET NOCOUNT ON;
	SET LOCK_TIMEOUT 30000;-- 30 seconds 

	---Declare Variable
	DECLARE @RuleID INT
	DECLARE @ContactRoleCode INT

	---Assigning value to Variable
	SELECT @RuleID = RuleID
	FROM TBL_PP_ValidationRule
	WHERE RuleName = 'Beneficiary Payment Condition'

	-- 26-jun-2014  Salih: Modified Rolecode implementation from Rolecode description to ID.
	SET @ContactRoleCode = 21 -- 'Beneficiary'
	
	-- Body of procedure  --        
	---Return Data
	SELECT PaymentType
		,StgData.ScheduleID
		,@RuleID AS RuleID
		,'BenePaymentConditionStatus' AS Attribute
		,ISNULL(LIST.ListItemName, 'Inactive') AS ActualValue
	FROM TBL_PP_STG_InnoTrustValidationEngineInput StgData
	LEFT JOIN TBL_PP_PaymentCondition PayCndn
		ON PayCndn.ContactID = StgData.ContactID
			AND StgData.CustomerAccountNumber = PayCndn.CustomerAccountNumber
			AND PayCndn.ContactRoleCode = @ContactRoleCode
	LEFT JOIN dbo.TBL_ListItem LIST
		ON LIST.ListItemID = PayCndn.StatusID
	WHERE StgData.PaymentType IN (
			'Beneficiarypayment'
			,'PGCalcImport'
			)
		AND StgData.UserID = @UserID
END TRY

BEGIN CATCH
	SELECT ERROR_MESSAGE() AS ErrorMessage
END CATCH

SET NOCOUNT OFF;