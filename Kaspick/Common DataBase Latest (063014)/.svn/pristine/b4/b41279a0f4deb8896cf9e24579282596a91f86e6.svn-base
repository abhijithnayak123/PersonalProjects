CREATE PROCEDURE sp_Deliverable_Calendar @CalendarID INT
	,@MinDate DATETIME = NULL
AS
DECLARE @DetID INT

/* Find DeliverableDetails for this CalendarParameter */
DECLARE detail_cursor INSENSITIVE CURSOR
FOR
SELECT DeliverableDetailID
FROM DeliverableDetail
WHERE CalendarParameterID = @CalendarID
	AND IsClosed = 0

OPEN detail_cursor

FETCH NEXT
FROM detail_cursor
INTO @DetID

/* Update all schedules */
WHILE @@FETCH_STATUS = 0
BEGIN
	EXEC sp_Deliverable_Schedule @DetailID = @DetID
		,@MinDate = @MinDate

	FETCH NEXT
	FROM detail_cursor
	INTO @DetID
END

/* Cleanup */
CLOSE detail_cursor

DEALLOCATE detail_cursor
