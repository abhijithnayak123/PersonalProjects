CREATE PROCEDURE [dbo].[USP_PV_GetAllCustomerAccountNumber] @XMLGroupID XML
AS
SET NOCOUNT ON		
Declare @ISPrimary bit;

CREATE TABLE #LocalTempTable(
GroupID int,
CustomerAccountNumber Varchar(14))

Create TABLE #PrimaryAccountTable(
PrimaryCustomerAccountNumber Varchar(14),
IsPrimary int)

INSERT into #LocalTempTable Select GroupID, CustomerAccountNumber
 from SYN_IT_AccountGroupAccounts v 
WHERE v.GroupID IN (
		SELECT XMLDATA.item.value('@GroupID[1]', 'int') AS GroupID
		FROM @XMLGroupID.nodes('//ClientParameterCollection/InsertList/ClientParameter') AS XMLDATA(item))
		
INSERT into #PrimaryAccountTable  (PrimaryCustomerAccountNumber,IsPrimary) 
SELECT XMLDATA.item.value('@CustomerAccountNumber[1]', 'Varchar(14)') AS GroupID, 1
		FROM @XMLGroupID.nodes('//ClientParameterCollection/InsertList/ClientParameter') AS XMLDATA(item) 		

select #LocalTempTable.CustomerAccountNumber, #LocalTempTable.GroupID, ISNULL(#PrimaryAccountTable.IsPrimary,0)  AS PrimaryCAN
from #LocalTempTable left join #PrimaryAccountTable 
on #LocalTempTable.CustomerAccountNumber = #PrimaryAccountTable.PrimaryCustomerAccountNumber
		
SET NOCOUNT OFF;
