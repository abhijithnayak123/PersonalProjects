CREATE FUNCTION [dbo].[FN_GetWithHoldingAmountForTrust]  
(  
 @CustomerAccountNUmber VARCHAR(14),
 @ContactID INT,  
 @PaymentDate DATETIME,  
 @TaxYear INT  
)  
RETURNS Money  
AS  
BEGIN  
 DECLARE @Withholding MONEY
   
 SET @Withholding = 0;  
  
 
  SELECT @Withholding = ISNULL(SUM(ISNULL(bps.ScheduledAmount, 0)),0)  
	FROM TBL_PP_BeneficiaryPayoutSchedule bps 
	INNER JOIN dbo.TBL_PP_AccountPayoutSchedule aps ON bps.APScheduleID = aps.APScheduleID   
 WHERE    
  DATEDIFF(DAY, bps.PaymentDate, @PaymentDate) = 0 
  AND bps.TAXYear = @TaxYear 
  AND aps.CustomerAccountNumber = @CustomerAccountNUmber
  AND bps.ContactID in 
  (
		SELECT PayeeID FROM dbo.SYN_IT_RemittanceInstructions ri
		INNER JOIN dbo.SYN_IT_BeneficiaryDistributions bd ON ri.instructionid= bd.instructionID
		WHERE CustomerAccountNumber = @CustomerAccountNUmber
		AND Contactid= @ContactID AND PayeeID !=@ContactID
  ) 
  

 RETURN @Withholding  
END  
GO


