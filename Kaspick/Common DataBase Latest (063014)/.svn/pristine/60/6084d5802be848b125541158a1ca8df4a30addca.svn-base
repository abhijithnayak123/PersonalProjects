CREATE PROCEDURE sp_Deliverable_Deassign (
	@setID INT
	,@clientID INT
	)
AS
DECLARE @deliverableID INT
	,@detailID INT

/* Lookup DeliverableSet */
SELECT @deliverableID = ds.DeliverableID
	,@detailID = dd.DeliverableDetailID
FROM DeliverableDetail dd
	,DeliverableSet ds
WHERE dd.DeliverableSetID = ds.DeliverableSetID
	AND dd.DeliverableSetID = @setID
	AND dd.ClientID = @clientID

IF (@detailID IS NOT NULL)
BEGIN
	/* IF any DeliverableHorizon Rows have an ActualDate, then close instead of delete */
	IF EXISTS (
			SELECT HorizonID
			FROM DeliverableHorizon
			WHERE DeliverableDetailID = @detailID
				AND ActualDate IS NOT NULL
			)
		UPDATE DeliverableDetail
		SET IsClosed = 1
		WHERE DeliverableDetailID = @detailID
			/* If no DeliverableHorizon rows hav ActualDate, then physically delete */
	ELSE
		DELETE DeliverableDetail
		WHERE DeliverableDetailID = @detailID

	/* Update Horizon */
	EXEC sp_Deliverable_Schedule @DetailID = @detailID

	/* Update folder/file names */
	EXEC sp_Deliverable_Filename @deliverableID
END
