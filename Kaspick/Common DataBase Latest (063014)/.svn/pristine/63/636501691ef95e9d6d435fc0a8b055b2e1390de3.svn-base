CREATE PROCEDURE GetNextUniqueID (
	@IDType VARCHAR(255) = ' '
	,@Result INT = 0 OUTPUT
	,@VB BIT = 0
	)
AS
DECLARE @ID INT

/* Get Current value of counter */
SELECT @ID = LastValue
FROM UniqueID
WHERE IDType = @IDType

/* Increment counter */
IF (@@ROWCOUNT = 1)
BEGIN
	UPDATE UniqueID
	SET LastValue = LastValue + 1
	WHERE IDType = @IDType
		AND LastValue = @ID

	/* Success? */
	IF @@ROWCOUNT = 1
		SELECT @Result = @ID + 1
	ELSE
		SELECT @Result = 0
END
ELSE
	/* Invalid ID Type */
	SELECT @Result = 0

/* Return result to VB */
IF @VB = 1
	SELECT NextID = @Result
