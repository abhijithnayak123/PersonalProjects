CREATE PROCEDURE [dbo].[USP_PP_GetTemplateDetailSection] @TemplateCode INT
AS
SET NOCOUNT ON
SET LOCK_TIMEOUT 30000

BEGIN
	SELECT CGAPymtDtl.PaymentID
		,Account1
		,CGAPymtDtl.PaymentAmount
	FROM TBL_PP_STG_CGAPaymentDetail CGAPymtDtl
	INNER JOIN TBL_PP_STG_PaymentExport PymtExp ON CGAPymtDtl.PaymentID = PymtExp.PaymentID
		AND TemplateCode = @TemplateCode
	ORDER BY PersonCode
		,GiftDate DESC
END
