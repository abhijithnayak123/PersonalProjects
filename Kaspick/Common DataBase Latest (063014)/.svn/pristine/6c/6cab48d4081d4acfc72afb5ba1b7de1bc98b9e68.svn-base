CREATE PROCEDURE [dbo].[USP_PP_GetCalcEngineYTDPayment] @XMLDATA XML
	,@TaxYear INT
AS
BEGIN TRY
	--  Initial Set statements  --      
	SET NOCOUNT ON;
	SET LOCK_TIMEOUT 30000;-- 30 seconds 

	-- Body of procedure  --    
	SELECT BenPmnt.PaymentDate
		,BenPmnt.TransactionNumber
		,BenPmnt.PaymentAmount
		,BenPmnt.PayeeName
		,BenPmnt.VoidDate
		,BenPmnt.PaymentID
		,BenPmnt.ClearDate
		,(
			CASE 
				WHEN BenPmnt.PaymentID > 0
					THEN 'B'
				ELSE 'O'
				END
			) AS PaymentType
		,'' AS Mode
		,BenPmnt.TaxYear
		,BenPmnt.PostDate
		,BenPmnt.STATUS
		,(
			CASE 
				WHEN CreatedBy = 1
					THEN 'A'
				ELSE 'M'
				END
			) AS PostMethod
		,BenPmnt.Memo
		,BenPmnt.Comment
		,BenPmnt.ClearMethod
		,BenPmnt.ReissueAs AS 'ReissueAs'
		,BenPmnt.IsBackBuilt
		,BenPmnt.RecordVersion
	FROM TBL_PP_BeneficiaryPayment BenPmnt
	INNER JOIN (
		SELECT x.Item.value('@CustomerAccountNumber[1]', 'varchar(14)') AS CustomerAccountNumber
		FROM @XMLDATA.nodes('//CustomerAccountNumberCollection/SelectList/CustomerAccountNumberItem') AS x(Item)
		) TmpXml
		ON BenPmnt.CustomerAccountNumber = TmpXml.CustomerAccountNumber
	WHERE BenPmnt.TaxYear >= @TaxYear
	ORDER BY BenPmnt.CustomerAccountNumber
		,BenPmnt.PaymentDate DESC
END TRY

BEGIN CATCH
	SELECT ERROR_MESSAGE() AS ErrorMessage
END CATCH
SET NOCOUNT OFF