CREATE PROCEDURE [dbo].[USP_PP_GetTemplateRule]
AS
SET NOCOUNT ON

BEGIN
	SELECT DISTINCT TemplRule.TemplateCode
		,TemplMaster.TemplateDescription
	FROM TBL_PP_TemplateTypeRule TemplRule
	INNER JOIN TBL_PP_TemplateMaster TemplMaster ON TemplRule.TemplateCode = TemplMaster.TemplateCode
	ORDER BY TemplRule.TemplateCode
END
GO


