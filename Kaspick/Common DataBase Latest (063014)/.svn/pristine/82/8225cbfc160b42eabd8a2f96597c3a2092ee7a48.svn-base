CREATE PROCEDURE [dbo].[USP_KCo_GetReportDetail]
AS
BEGIN
	SELECT RListDet.ReportID
		,RListDet.Category
		,RListDet.ApplicationID
		,RListDet.NAME
		,RListDet.Description
		,RListDet.SPName
		,RListDet.IsActive
		,RListDet.ReportDisplaySeq
		,RListDet.CreatedDate
		,RListAtt.AttributeID
		,RListAtt.Attribute
		,RListAtt.Description AS ADescription
		,RListAtt.CONTROL
		,RListAtt.Datatype
		,RListAtt.FixedValue
	FROM TBL_KCo_ReportListDetail RListDet
	LEFT OUTER JOIN [TBL_KCo_ReportListAttribute] RListAtt
		ON RListDet.ReportID = RListAtt.ReportID
	WHERE RListDet.IsActive = 1
	ORDER BY RListDet.NAME
END
