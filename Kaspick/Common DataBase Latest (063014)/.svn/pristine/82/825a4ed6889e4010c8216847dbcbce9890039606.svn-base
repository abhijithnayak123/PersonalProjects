CREATE PROCEDURE [dbo].[USP_EX_GetWftInnotrustAddressesNewForXML] --'A8BBBA5C-D6DA-4A4F-8062-4443FF8CBBEF'  --'<root><Item ID="7777654^ccgap^"></Item></root>',	36274 
	(
	@Guid VARCHAR(255)
	)
AS
BEGIN
	BEGIN TRY
		Select ISNULL(DonoBeneAddr.Address1,'') AS Address1,
		ISNULL(DonoBeneAddr.Address2,'') AS Address2,
		ISNULL(DonoBeneAddr.Address3,'') AS Address3, 
		ISNULL(DonoBeneAddr.City,'') AS City,
		ISNULL(DonoBeneAddr.State,'') AS State,
		ISNULL(DonoBeneAddr.ZipCode,'') AS ZipCode,
		ISNULL(DonoBeneAddr.CountryCode,'') AS CountryCode,
		ISNULL(DonoBeneAddr.ContactID,'') AS ContactID,
		ISNULL(AddChg.ManagerCode,'') AS ManagerCode,
		ISNULL(DonoBeneAddr.ZipCode,'') AS ZipCode,
		ISNULL(DonoBeneAddr.AddressType,'') AS AddressType,
		CASE  
		WHEN DonoBeneAddr.isPrimaryAddress = 1 
			THEN '-1'
		WHEN DonoBeneAddr.isPrimaryAddress = 0 OR DonoBeneAddr.isPrimaryAddress IS NULL
			THEN '0'
		END AS IsPrimary,
		
		CASE  
		WHEN DonoBeneAddr.isTaxAddress = 1 
			THEN 'Yes'
		WHEN DonoBeneAddr.isTaxAddress = 0 OR DonoBeneAddr.isTaxAddress IS NULL
			THEN 'No'
		END AS TaxMailing,
		
		CASE  
		WHEN DonoBeneAddr.isAltenativePaymentAddress = 1 
			THEN 'Yes'
		WHEN DonoBeneAddr.isAltenativePaymentAddress = 0 OR DonoBeneAddr.isAltenativePaymentAddress IS NULL
			THEN 'No'
		END AS AlternatePayment,
		
		CASE  
		WHEN DonoBeneAddr.isMailingAddress = 1 
			THEN 'Yes'
		WHEN DonoBeneAddr.isMailingAddress = 0 OR DonoBeneAddr.isMailingAddress IS NULL
			THEN 'No'
		END AS ReportMailing,
		ISNULL(DonoBeneAddr.AddressID,'') AS AddressID,
		ISNULL(DonoBeneAddr.Action,'') AS Action,
		ISNULL(AddChg.Comments,'') AS Comments,
		ISNULL(DonoBeneAddr.FromDate,'') AS FromDate,
		ISNULL(DonoBeneAddr.ToDate, '') AS ToDate,
		ISNULL(DonoBeneAddr.DonorBeneContactAddressID,'') AS DonorBeneContactAddressID
		FROM TBL_TAG_DBAddressChange AddChg
		INNER JOIN TBL_TAG_DonorBeneContactAddress DonoBeneAddr ON AddChg.DBAddressChangeID=DonoBeneAddr.DBAddressChangeID
		WHERE AddChg.GUID=@Guid	and DonoBeneAddr.Action is not null
		
	END TRY

	BEGIN CATCH
		DECLARE @ProcName VARCHAR(60);
		DECLARE @ErrorMessage NVARCHAR(4000);
		DECLARE @ErrorSeverity INT;
		DECLARE @ErrorState INT;

		SET @ProcName = 'USP_EX_GetWftInnotrustAddressesNewForXML';

		SELECT @ErrorMessage = ERROR_MESSAGE(),
			@ErrorSeverity = ERROR_SEVERITY(),
			@ErrorState = ERROR_STATE();

		RAISERROR (
				@ErrorMessage,
				-- Message text.
				@ErrorSeverity,
				-- Severity.
				@ErrorState -- State.
				);
	END CATCH
END

GO

