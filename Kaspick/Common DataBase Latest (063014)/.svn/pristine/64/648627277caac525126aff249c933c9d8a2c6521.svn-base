CREATE PROCEDURE sp_Deliverable_Assign @setID INT
	,@clientID INT
	,@lagDays INT
	,@minDate DATETIME
AS
DECLARE @calendarID INT
	,@key INT
	,@freq VARCHAR(20)

/* Get ID for new DeliverableDetail */
SELECT @key = 0

EXEC GetNextUniqueID @IDType = 'DELIVERABLEDETAIL'
	,@Result = @key OUTPUT

IF @key > 0
BEGIN
	/* See if calendar is defined at document level */
	SELECT @calendarID = Deliverable.CalendarParameterID
		,@freq = Deliverable.DerivedFrequency
	FROM Deliverable
		,DeliverableSet
	WHERE Deliverable.DeliverableID = DeliverableSet.DeliverableID
		AND DeliverableSet.DeliverableSetID = @setID

	/* Create DeliverableDetail Row */
	INSERT INTO DeliverableDetail (
		DeliverableDetailID
		,ClientID
		,DeliverableSetID
		,DerivedFrequency
		,LagDays
		,CalendarParameterID
		)
	VALUES (
		@key
		,@clientID
		,@setID
		,@freq
		,@lagDays
		,@calendarID
		)

	/* Set up horizon */
	EXEC sp_Deliverable_Schedule @DetailID = @key
		,@MinDate = @minDate
END
