CREATE PROCEDURE [USP_SIT_GetMarketValueSummary] @ValuationID INT
	,@PeriodEndDate DATETIME
AS
BEGIN
	SET NOCOUNT ON;
	SET LOCK_TIMEOUT 30000;-- 30 seconds    

	--  Variable Declarations  --   
	--  Temp tables, Cursors, Table Variables  --    
	DECLARE @EndDate DATETIME
	DECLARE @StartDate DATETIME

	SET @EndDate = @PeriodEndDate
	SET @StartDate = CAST((STR(YEAR(@enddate)) + '/' + STR(MONTH(@enddate)) + '/1') AS DATETIME)

	SELECT AccMas.ExternalCustomerID AS CustomerAccountNumber
		,PVal.AccountType
		,LTRIM(RTRIM(ISNULL(AccMas.CustomerDescriptionLine1, '') + '' + ISNULL(AccMas.CustomerDescriptionLine2, '') + '' + ISNULL(AccMas.CustomerDescriptionLine3, '') + '' + ISNULL(AccMas.CustomerDescriptionLine4, ''))) AS AccountFullName
		,MrktVal.BeginningMarketValue
		,MrktVal.IncomeEarned
		,MrktVal.RealizedGainOrLoss
		,MrktVal.BeginningUnrealizedGainOrLoss
		,MrktVal.EndingUnrealizedGainOrLoss
		,MrktVal.EndingMarketValue
		,MrktVal.NonAssetRelatedIncome
		,@StartDate AS StartDate
		,@EndDate AS EndDate
		,MrktVal.ValuationID
	FROM TBL_SIT_EBRMarketValueSummary MrktVal
	INNER JOIN TBL_PV_Valuation PVal
		ON MrktVal.ValuationID = PVal.ValuationID
	INNER JOIN SYN_IT_AccountMaster AccMas
		ON AccMas.CustomerAccountNumber = PVal.CustomerAccountNumber
	WHERE MrktVal.ValuationID = @ValuationID

	SET NOCOUNT OFF;
END
