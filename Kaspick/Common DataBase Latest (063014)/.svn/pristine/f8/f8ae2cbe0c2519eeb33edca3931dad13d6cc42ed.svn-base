CREATE PROCEDURE dbo.[USP_PP_GetCalcEngineBeneficiaryPayoutSchedule] @XMLDATA XML
	,@TaxYear INT
AS
BEGIN TRY
	--  Initial Set statements  --      
	SET NOCOUNT ON;
	SET LOCK_TIMEOUT 30000;-- 30 seconds 

	--Return data		
	SELECT AccntPay.CustomerAccountNumber
		,BenPay.BPScheduleID
		,BenPay.APScheduleID
		,BenPay.ContactID
		,BenPay.ContactRoleCode
		,BenPay.PaymentDate
		,BenPay.TaxYear
		,BenPay.ScheduledAmount
		,BenPay.PaymentID
		,AccntPay.RecordVersion AS APSRecordVersion
		,BenPay.RecordVersion AS BPSRecordVersion
	FROM TBL_PP_BeneficiaryPayoutSchedule BenPay
	INNER JOIN TBL_PP_AccountPayoutSchedule AccntPay
		ON BenPay.APScheduleID = AccntPay.APScheduleID
	INNER JOIN (
		SELECT x.Item.value('@CustomerAccountNumber[1]', 'varchar(14)') AS CustomerAccountNumber
		FROM @XMLDATA.nodes('//CustomerAccountNumberCollection/SelectList/CustomerAccountNumberItem') AS x(Item)
		) TmpXml
		ON AccntPay.CustomerAccountNumber = TmpXml.CustomerAccountNumber
	WHERE BenPay.TaxYear = @TaxYear
	ORDER BY AccntPay.CustomerAccountNumber
		,BenPay.APScheduleID
		,BenPay.BPScheduleID
END TRY

BEGIN CATCH
	SELECT ERROR_MESSAGE() AS ErrorMessage
END CATCH
