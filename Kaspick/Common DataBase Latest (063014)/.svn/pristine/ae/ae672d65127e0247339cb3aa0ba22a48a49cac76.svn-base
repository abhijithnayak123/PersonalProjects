CREATE PROCEDURE USP_SIT_GetAllCustomerAccountNumber
	-- paremeters here    
AS
BEGIN
	--  Initial Set statements  --    
	SET ANSI_NULLS OFF;
	SET QUOTED_IDENTIFIER OFF;

	--  Variable Declarations  --    
	--  Variable Data Assignment  --    
	-- Body of procedure  --    
	SELECT CP.CustomerAccountNumber
		,CP.AccountType
		,CP.ManagerCode
		,CP.ManagerCodeName
		,CP.GiftWrapAccount
		,CP.GroupID
	FROM TBL_PV_ManagerCodeParameter CP
	WHERE CP.CustomerAccountNumber IN (
			SELECT OwnerID
			FROM TBL_PolicyItem
			WHERE PolicyLevel = 300
				AND PolicyDropDownID = (
					SELECT PolicyDropDownID
					FROM TBL_PolicyDropDown
					WHERE DropDownText = 'Sub-Accounting'
					)
				AND PolicyDimensionID = (
					SELECT PolicyDimensionID
					FROM TBL_PolicyDimension
					WHERE FullName = 'Accounting Routine'
					)
			)
		AND CP.AccountType IN (
			'GAP'
			,'DAF'
			,'DDF'
			,'END'
			,'ENDQ'
			,'ENDT'
			)
	ORDER BY CP.ManagerCode
END