CREATE PROCEDURE [dbo].[USP_PP_ReportGetManagerPaymentList] (
	@ManagerCode CHAR(4)
	,@FromDate DATETIME
	,@ToDate DATETIME
	)
AS
BEGIN
	--  Initial Set statements  --    
	SET NOCOUNT ON;
	SET LOCK_TIMEOUT 30000;-- 30 seconds 

	SELECT AccMstr.TrustAccountNumber AS BriefName
		,AccMstr.CustomerAccountNumber AS AdventID
		,BenPymt.DocumentNumber AS CheckNumber
		,rtrim(ltrim(ISNULL(AccMstr.CustomerDescriptionLine1, '') + ' ' + ISNULL(AccMstr.CustomerDescriptionLine2, '') + ' ' + ISNULL(AccMstr.CustomerDescriptionLine3, '') + ' ' + ISNULL(AccMstr.CustomerDescriptionLine4, ''))) AS TrustName
		,BenPymt.PayeeName
		,BenPymt.PaymentAmount
		,convert(VARCHAR, BenPymt.PaymentDate, 101) AS PaymentDate
	FROM SYN_IT_AccountMaster AccMstr
	INNER JOIN TBL_PP_BeneficiaryPayment BenPymt
		ON AccMstr.CustomerAccountNumber = BenPymt.CustomerAccountNumber
			AND BenPymt.ManagerCode = @ManagerCode
	WHERE BenPymt.PaymentDate BETWEEN @FromDate
			AND @ToDate
	ORDER BY AccMstr.CustomerAccountNumber
		,BenPymt.PaymentDate
		,BenPymt.DocumentNumber;

	SET NOCOUNT OFF
END
