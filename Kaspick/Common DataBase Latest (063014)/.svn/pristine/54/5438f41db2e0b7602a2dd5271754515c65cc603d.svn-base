CREATE PROCEDURE [dbo].[USP_SIT_GetSeveranceFile] @ValuationID INT
AS
BEGIN
	SET NOCOUNT ON;
	SET LOCK_TIMEOUT 30000;-- 30 seconds    

	--  Variable Declarations  --   
	--  Temp tables, Cursors, Table Variables  --    
	SELECT Svrnc.OrgName
		,Svrnc.MarketValue
		,Svrnc.MarketValueDate
		,Svrnc.GiftID AS giftKey
		,Svrnc.OrgNick
		,Svrnc.DistributedAmount
		,Svrnc.AccountClosedDate
		,DataHub.DataHubIdentifier
		,MgrcdParm.ManagerCode AS OrgShortName
	FROM TBL_SIT_Severance Svrnc
	INNER JOIN TBL_PV_Valuation PVal
		ON Svrnc.ValuationID = PVal.ValuationID
	INNER JOIN TBL_PV_ManagerCodeParameter MgrcdParm
		ON MgrcdParm.CustomerAccountNumber = PVal.CustomerAccountNumber
	INNER JOIN TBL_SIT_GiftDataHubIdentifier DataHub
		ON Svrnc.GiftID = DataHub.GiftKey
	WHERE Svrnc.ValuationID = @ValuationID
		AND 0 = (
			SELECT COUNT(*)
			FROM TBL_SIT_Severance Svrnc
			INNER JOIN TBL_SIT_GiftDataHubIdentifier DataHub
				ON Svrnc.GiftID = DataHub.GiftKey
			WHERE (
					LTRIM(RTRIM(DataHub.DataHubIdentifier)) = ''
					OR DataHub.DataHubIdentifier IS NULL
					)
				AND ValuationID = @ValuationID
			)

	SET NOCOUNT OFF;
END
