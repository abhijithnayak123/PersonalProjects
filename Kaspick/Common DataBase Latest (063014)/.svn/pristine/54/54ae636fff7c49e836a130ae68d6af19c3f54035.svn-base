CREATE PROCEDURE USP_RP_GetDTRoleByUser  
@UserID INT  
AS  
 BEGIN  
  Select Distinct RoleID As MasterRoleID, RoleBriefName As RoleBriefName, RoleFullName As RoleFullName  
  From VW_EX_UserRole   
  Where UserID = @UserID  
  Order By RoleFullName  
 END  
 GO

IF EXISTS (
		SELECT *
		FROM sysobjects
		WHERE type = 'P'
			AND NAME = 'USP_RP_GetDTRoleByUser'
		)
BEGIN
	PRINT 'CREATED PROCEDURE USP_RP_GetDTRoleByUser';
END