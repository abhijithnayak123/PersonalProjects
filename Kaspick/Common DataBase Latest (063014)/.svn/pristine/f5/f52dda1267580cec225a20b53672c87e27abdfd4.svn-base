CREATE PROCEDURE [dbo].[USP_PP_GetValidationEngineBackBuiltStatus]    
 
 @UserID INT,
 @Type Bit =1--auto
       
AS       
	BEGIN TRY    
		--  Initial Set statements  --      
		SET NOCOUNT ON;      
		SET LOCK_TIMEOUT                30000;   -- 30 seconds      
   
 
		---Declare Variable
		DECLARE @RuleID INT
		
		---Assigning value to Variable
		SELECT @RuleID = RuleID
		FROM TBL_PP_ValidationRule
		WHERE RuleName = 'Back Built Payment'
			AND RuleCategory = 'Beneficiary payment'

      
		-- Body of procedure  --      
		----Return Data
		SELECT StgData.PaymentType
			,StgData.ScheduleID
			,@RuleID AS RuleID
			,'IsBackBuilt' AS Attribute
			,IsBackBuilt AS ActualValue
		FROM TBL_PP_STG_InnoTrustValidationEngineInput StgData
		INNER JOIN TBL_PP_BeneficiaryPayoutSchedule BenPay ON StgData.ScheduleID = BenPay.BPScheduleID
		WHERE PaymentType = 'Beneficiarypayment'
		AND UserID = @UserID
     
END TRY          
BEGIN CATCH

	SELECT ERROR_MESSAGE() AS ErrorMessage
	
END CATCH

SET NOCOUNT OFF; 