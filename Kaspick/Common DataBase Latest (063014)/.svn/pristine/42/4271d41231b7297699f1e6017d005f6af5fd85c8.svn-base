CREATE PROCEDURE [dbo].[USP_PP_GetExceptionCode]
AS
SET NOCOUNT ON

BEGIN
	SELECT DISTINCT ExceptionCode AS 'DropDownID'
		,ExceptionDescription AS 'DropDownValue'
	FROM TBL_PP_ExceptionMaster
	WHERE IsDeleted = 0
	ORDER BY ExceptionCode
END
