CREATE PROCEDURE CreateDefaultMVDSet (
	@deliverableid INT
	,@versionid INT
	)
AS
DECLARE @setid INT

EXEC GetNextUniqueID @IDType = 'DELIVERABLESET'
	,@Result = @setid OUTPUT

INSERT INTO DeliverableSet (
	DeliverableSetID
	,DeliverableID
	,VersionID
	,MediaID
	,FormatID
	) (
	SELECT @setid
	,@deliverableid
	,@versionid
	,m.MediaID
	,f.FormatID FROM DeliverableMedia m
	,DeliverableFormat f WHERE m.fullname = 'Website'
	AND f.fullname = 'MVD'
	)
