CREATE PROCEDURE [dbo].[USP_RP_GetUser]  
(  
    @LOGIN_NAME	AS	VARCHAR(50))  
AS  
BEGIN  

	IF EXISTS(SELECT UserID,  
	ISNULL(LoginName,' ') AS LoginName  
	FROM TBL_KS_User  
	WHERE LoginName = @LOGIN_NAME)  
		BEGIN  
			SELECT UserID,  
			ISNULL(LoginName,' ') AS LOGIN_NAME  
			FROM TBL_KS_User  
			WHERE LoginName = @LOGIN_NAME  
		END  
		ELSE                  
			SELECT  0 USER_ID  
END  
GO
	IF EXISTS (SELECT *
		   FROM   sysobjects 
		   WHERE  type = 'P'
				  AND name = 'USP_RP_GetUser')
	BEGIN
		PRINT 'CREATED USP_RP_GetUser';
	END
  
  