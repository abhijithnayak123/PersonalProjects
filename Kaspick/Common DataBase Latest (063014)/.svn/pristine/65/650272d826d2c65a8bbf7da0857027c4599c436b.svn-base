CREATE PROCEDURE [dbo].[USP_PP_GetValidationEngineBeneficiaryAccountStatus]
	-- paremeters here                                
	@UserID INT
	,@Type BIT = 1 --auto              
AS
BEGIN TRY
	--  Initial Set statements  --      
	SET NOCOUNT ON;
	SET LOCK_TIMEOUT 30000;-- 30 seconds      

	---Declare Variable
	DECLARE @RuleID INT

	---Assigning value to Variable
	SELECT @RuleID = RuleID
	FROM TBL_PP_ValidationRule
	WHERE RuleName = 'Account inactive'
		AND RuleCategory = 'Beneficiary payment'

	-- Body of procedure  -- 
	-- Return Data           
	SELECT PaymentType
		,ScheduleID
		,@RuleID AS RuleID
		,'AccountStatus' AS Attribute
		,(
			CASE 
				WHEN AccountActive = 1
					THEN 'Active'
				WHEN AccountActive = 0
					THEN 'Inactive'
				END
			) AS ActualValue
	FROM TBL_PP_STG_InnoTrustValidationEngineInput
	WHERE PaymentType IN (
			'Beneficiarypayment'
			,'PGCalcImport'
			)
		AND UserID = @UserID
END TRY

BEGIN CATCH
	SELECT ERROR_MESSAGE() AS ErrorMessage
END CATCH

SET NOCOUNT OFF;