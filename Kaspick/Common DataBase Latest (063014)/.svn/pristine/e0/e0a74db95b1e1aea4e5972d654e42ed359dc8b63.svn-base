CREATE PROCEDURE USP_RP_GetBRDTStatus    
(  
 @DeliverableID int  
)               
AS              
BEGIN  
  Select DPS.DeliverableItemStatusID as DDVALUE, DPS.StatusName as DDTEXT  
  From TBL_DLV_DeliverableProcessStatus As DPS   
   Inner Join TBL_DLV_Deliverable As DD On DPS.DeliverableProcessID = DD.DeliverableProcessID  
  Where DD.DeliverableID = @DeliverableID   
  Order by DPS.StatusName  
END  
GO

IF EXISTS (
		SELECT *
		FROM sysobjects
		WHERE type = 'P'
			AND NAME = 'USP_RP_GetBRDTStatus'
		)
BEGIN
	PRINT 'CREATED PROCEDURE USP_RP_GetBRDTStatus';
END