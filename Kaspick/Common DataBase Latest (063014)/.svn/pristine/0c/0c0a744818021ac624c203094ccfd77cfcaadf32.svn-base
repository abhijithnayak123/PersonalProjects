CREATE FUNCTION FN_GetNAListID (
	@ITEM_NA BIT
	,@IVAN_VALUE VARCHAR(100)
	,@LIST_TYPE_NAME VARCHAR(100)
	)
RETURNS INT
AS
BEGIN
	DECLARE @LIST_ITEM_ID INT;

	IF (@ITEM_NA = 0)
	BEGIN
		IF (@IVAN_VALUE IS NOT NULL) --Not Required Later  
		BEGIN
			SET @LIST_ITEM_ID = dbo.FN_GetListItemID(@IVAN_VALUE, @LIST_TYPE_NAME)
		END
		ELSE --Required Later  
		BEGIN
			SET @LIST_ITEM_ID = 0
		END
	END
	ELSE
	BEGIN
		SET @LIST_ITEM_ID = dbo.FN_GetListItemID(@IVAN_VALUE, @LIST_TYPE_NAME)
	END

	RETURN @LIST_ITEM_ID
END
GO

SET NOCOUNT OFF;
