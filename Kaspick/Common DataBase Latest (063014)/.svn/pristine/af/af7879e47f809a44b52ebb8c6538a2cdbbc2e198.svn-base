CREATE PROCEDURE [dbo].[USP_PV_GetValuationStatusLog] (@XMLValuationID XML)
AS
BEGIN
	--  Initial Set statements  --    
	SET NOCOUNT ON;
	SET LOCK_TIMEOUT 30000;-- 30 seconds 

	-- Get all valuation status 
	SELECT ValuationTrackerID
		,ValTrkr.ValuationID
		,ValTrkr.ModifiedDate
		,ValTrkr.ModifiedBy
		,PreviousStatusID
		,PreviousStatus
		,CurrentStatusID
		,CurrentStatus
		,Usr.LoginName AS ModifiedUser
	FROM TBL_PV_ValuationTracker ValTrkr
	INNER JOIN TBL_KS_User Usr
		ON Usr.UserID = ValTrkr.ModifiedBy
	INNER JOIN (
		SELECT XmlInput.Item.value('@ValuationID[1]', 'INT') AS ValuationID
		FROM @XMLValuationID.nodes('//ValuationCollection/InsertList/Valuation') AS XmlInput(Item)
		) XmlInput
		ON ValTrkr.ValuationID = XmlInput.ValuationID
END
