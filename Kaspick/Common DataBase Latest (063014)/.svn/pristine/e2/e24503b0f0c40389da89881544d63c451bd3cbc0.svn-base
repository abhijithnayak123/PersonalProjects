   <ImportStaging StagingID="14" />  
  </InsertList><UpdateList></UpdateList><DeleteList></DeleteList>  
	</ImportStagingCollection>'  
	EXEC USP_IE_ReviewCalcNetIncomeYieldForPayment  @XMLDATA    
