CREATE PROCEDURE [dbo].[USP_PP_GetValidationEngineManuallyMatchedPaymentReview]                    
 -- paremeters here                                
@UserID INT,
@Type Bit =1--auto        
AS       
	BEGIN TRY    
		--  Initial Set statements  --      
		SET NOCOUNT ON;      
		SET LOCK_TIMEOUT                30000;   -- 30 seconds      
        
        
        ---Declare Variable
		DECLARE @RuleID INT          
		
		
		---Assigning value to Variable
		SELECT @RuleID = RuleID
		FROM TBL_PP_ValidationRule
		WHERE RuleName = 'Manually matched PIF/GAP payments must be reviewed'
			AND RuleCategory = 'Beneficiary payment'                    
                    
-- Body of procedure  --                    
-- Return Data
          
		SELECT               
		PaymentType,              
		StgData.ScheduleID,               
		@RuleID AS RuleID,               
		'ManuallyMatchedPaymentReview' as Attribute,              
		'none'  AS ActualValue                 
		FROM TBL_PP_STG_InnoTrustValidationEngineInput  StgData        
		INNER JOIN TBL_PP_PGCalcPaymentDataMerged pgcalc ON pgcalc.MergedPGCalcPaymentID = StgData.ScheduleID            
		WHERE  ISNULL(pgcalc.GiftWrapPaymentReviewedBy,'') = ''  
		AND  StgData.PaymentType = 'PGCalcImport' 
		AND UserID = @UserID 
  
     
END TRY          
BEGIN CATCH

	SELECT ERROR_MESSAGE() AS ErrorMessage
	
END CATCH       
      
SET NOCOUNT OFF;    
     