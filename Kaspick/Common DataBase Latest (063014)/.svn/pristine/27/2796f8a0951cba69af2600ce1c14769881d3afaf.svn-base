CREATE PROCEDURE [dbo].[USP_PP_GetValidationEngineBeneficiaryAccountPaymentCondition] @UserID INT
	,@Type BIT = 1 --auto 
AS
BEGIN TRY
	--  Initial Set statements  --        
	SET NOCOUNT ON;
	SET LOCK_TIMEOUT 30000;-- 30 seconds 

	---Declare Variable
	DECLARE @RuleID INT

	---Assigning value to Variable
	SELECT @RuleID = RuleID
	FROM TBL_PP_ValidationRule
	WHERE RuleName = 'Account Payment Condition'
		AND RuleCategory = 'Beneficiary payment'

	-- Body of procedure  --      
	-----Return Data
	SELECT DISTINCT PaymentType
		,StgData.ScheduleID
		,@RuleID AS RuleID
		,'AccountPaymentConditionStatus' AS Attribute
		,ISNULL(List.ListItemName, 'Inactive') AS ActualValue
	FROM TBL_PP_STG_InnoTrustValidationEngineInput StgData
	LEFT JOIN TBL_PP_PaymentCondition PayCndn
		ON PayCndn.CustomerAccountNumber = StgData.CustomerAccountNumber
		AND PayCndn.ContactID IS NULL
	LEFT JOIN dbo.TBL_ListItem List
		ON List.ListItemID = PayCndn.StatusID
	WHERE StgData.PaymentType IN (
			'Beneficiarypayment'
			,'PGCalcImport'
			)
		AND StgData.UserID = @UserID
		
END TRY

BEGIN CATCH
	SELECT ERROR_MESSAGE() AS ErrorMessage
END CATCH

SET NOCOUNT OFF;