CREATE FUNCTION [dbo].[Fn_ReportGetDateProrate] (@IDate DATETIME)
RETURNS FLOAT
AS
BEGIN
	DECLARE @ReturnValue FLOAT
	DECLARE @iDaysInYear INT
	DECLARE @iDaysElapsed INT

	--Calclate number of days in year  
	SET @iDaysInYear = dbo.Fn_ReportGetDaysInYear(year(@IDate))
	--Calculate # of Days elapsed  
	SET @iDaysElapsed = datediff(day, cast('01/01/' + cast(year(@IDate) AS VARCHAR) AS DATETIME), @IDate)
	--Calculate fraction of year remaining  
	SET @ReturnValue = 1 - (cast(@iDaysElapsed AS FLOAT) / cast(@iDaysInYear AS FLOAT))

	RETURN @ReturnValue
END

