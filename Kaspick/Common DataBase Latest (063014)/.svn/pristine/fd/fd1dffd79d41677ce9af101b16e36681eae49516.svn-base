CREATE PROCEDURE [dbo].[USP_EX_GetUseruser] (@LOGIN_NAME AS VARCHAR(50))
AS
BEGIN
	IF EXISTS (
			SELECT USERID
				,ISNULL(LOGINNAME, ' ') AS LOGIN_NAME
			FROM TBL_KS_USER
			WHERE LOGINNAME = @LOGIN_NAME
			)
	BEGIN
		SELECT USERID
			,ISNULL(LOGINNAME, ' ') AS LOGIN_NAME
		FROM TBL_KS_USER
		WHERE LOGINNAME = @LOGIN_NAME
	END
	ELSE
		SELECT 0 USER_ID
END
GO

