CREATE FUNCTION [dbo].[Fn_GetFormatSSN] (
	@SSN Varchar(12)
	)

RETURNS VARCHAR(12)  
AS  
BEGIN  

DECLARE @SSN1 varchar(12)
 
 SET @SSN1 = SUBSTRING(@SSN,1,3) + '-' +   
    SUBSTRING(@SSN,4,2) + '-' +   
    SUBSTRING(@SSN,6,4)  
  
 -- Return the result of the function  
 RETURN @SSN1
  
END  