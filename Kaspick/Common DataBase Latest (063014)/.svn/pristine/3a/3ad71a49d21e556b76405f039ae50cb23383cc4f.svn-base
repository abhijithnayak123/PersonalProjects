CREATE FUNCTION [dbo].[FN_FASB_GetListItemName]
(
@list_item_id INT
)
RETURNS VARCHAR(100)
AS
BEGIN
	DECLARE @list_item_name VARCHAR(100)
	
	SELECT
		@list_item_name = LTRIM(RTRIM(ListItemName))
	FROM
		TBL_ListItem
	WHERE
		ListItemID = @list_item_id

	RETURN @list_item_name
END
GO