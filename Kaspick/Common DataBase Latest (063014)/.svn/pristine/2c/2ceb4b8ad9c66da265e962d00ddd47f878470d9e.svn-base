CREATE PROCEDURE [dbo].[USP_PP_GetListItemValue] (@ListTypeName VARCHAR(100))
AS
BEGIN
	SELECT ListItemID DDVALUE
		,ListItemName DDTEXT
	FROM dbo.TBL_ListItem ListItem
	INNER JOIN dbo.TBL_ListType ListType ON ListItem.ListTypeID = ListType.ListTypeID
	WHERE ListTypeName = @ListTypeName
	ORDER BY DisplaySequence
END
