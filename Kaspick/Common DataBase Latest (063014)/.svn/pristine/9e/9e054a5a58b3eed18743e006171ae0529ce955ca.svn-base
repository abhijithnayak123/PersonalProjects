CREATE PROCEDURE sp_dsNextWeekday @seed_date DATETIME
OUTPUT AS

WHILE (
		DATEPART(weekday, @seed_date) IN (
			1
			,7
			)
		)
	SELECT @seed_date = DATEADD(day, 1, @seed_date)
