CREATE PROCEDURE [dbo].[USP_PV_GetManagerAccount] (@AccountType VARCHAR(20))
AS
BEGIN
	--  Initial Set statements  --    
	SET NOCOUNT ON;
	SET LOCK_TIMEOUT 30000;-- 30 seconds    

	IF @AccountType IN (
			'GAP'
			,'GAPR'
			,'GAPP'
			,'DAF'
			,'END'
			,'ENDQ'
			,'ENDT'
			,'DDF'
			)
	BEGIN
		SELECT ParameterID
			,CustomerAccountNumber
			,AccountType
			,ManagerCode
			,ManagerCodeName
			,GiftWrapAccount
			,GroupID
			,HasGiftExclusion
			,GiftExclusionComment
			,ExcludeAccruedInterest
			,ExcludeIncomeCash
			,AccountingRoutine
			,IsSubAccountingSystemFIMS
		FROM TBL_PV_ManagerCodeParameter MCParam
		WHERE MCParam.AccountType = @AccountType
		ORDER BY CustomerAccountNumber
	END
END
