			FROM sysobjects
			WHERE type = 'P'
			AND name = 'USP_RP_GetBRDTDeliveryMethod') 
	BEGIN
			PRINT 'CREATED PROCEDURE USP_RP_GetBRDTDeliveryMethod';
	END