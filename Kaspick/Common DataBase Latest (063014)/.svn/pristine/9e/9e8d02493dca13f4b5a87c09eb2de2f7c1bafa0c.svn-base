CREATE PROCEDURE [dbo].[USP_RP_GetBRDTDeliveryMethod]        
(      
 @DeliverableID INT    
)                   
AS                  
BEGIN    
           
 SELECT     
  DM.DeliveryMethodID AS DDVALUE,      
  DM.DeliveryMethodName AS DDTEXT      
 FROM TBL_DLV_DeliverableMethod DTM    
  INNER JOIN TBL_DLV_DeliveryMethod DM ON DM.DeliveryMethodID = DTM.DeliveryMethodID     
 WHERE DTM.DeliverableID = @DeliverableID      
     
END    



GO
