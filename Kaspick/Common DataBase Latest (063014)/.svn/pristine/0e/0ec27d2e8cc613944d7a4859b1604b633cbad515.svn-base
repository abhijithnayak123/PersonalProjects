CREATE PROCEDURE [dbo].[USP_PV_GetUnitFromGiftwrapPIF] (
	@XMLCustomerAccountNumber XML
	,@ValuationDate DATETIME
	)
AS
BEGIN
	--  Initial Set statements  --    
	SET NOCOUNT ON;
	SET LOCK_TIMEOUT 30000;-- 30 seconds 

	DECLARE @LookupID INT

	SELECT @LookupID = lookupid
	FROM SYN_GW_TBLLookupGroup LkpGrp
	INNER JOIN SYN_GW_TBLLookup Lkp
		ON LkpGrp.LookupGroupID = Lkp.LookupGroupID
			AND Lkp.Short = 'Current'
			AND LkpGrp.LookupGroupID = (
				SELECT LookupGroupID
				FROM SYN_GW_TBLLookupGroup
				WHERE GroupName = 'GiftStatus'
				);

	WITH PIFUnits
	AS (
		SELECT PIF.PifNickname AS PifNickName
			,SUM(GiftDetails.units) TotalUnits
		FROM SYN_GW_TBLGift Gift
		INNER JOIN SYN_GW_TBLPIF Pif
			ON Pif.PifID = Gift.PifID
		INNER JOIN SYN_GW_TBLGiftDetail GiftDetails
			ON Gift.GiftID = GiftDetails.GiftID
		INNER JOIN SYN_GW_TBLGiftType GiftType
			ON Gift.GiftTypeID = GiftType.GiftTypeID
		INNER JOIN (
			SELECT XMLInput.Item.value('@CustomerAccountNumber[1]', 'varchar(14)') AS OrgAccount1
			FROM @XMLCustomerAccountNumber.nodes('//CustomerAccountCollection/InsertList/CustomerAccount') AS XMLInput(Item)
			) XmlInput
			ON XmlInput.OrgAccount1 = LTRIM(RTRIM(Pif.PifNickname))
		WHERE GiftType.Short = 'PIF'
			AND GiftDetails.giftdate <= @ValuationDate
			AND (
				Gift.GiftStatusIDLookup = @LookupID
				OR Gift.ACCOUNTCLOSEDDATE > @ValuationDate
				)
		GROUP BY PIF.PifNickname
		)
	SELECT PifNickName AS CustomerAccountNumber
		,SUM(TotalUnits) Units
	FROM PIFUnits
	GROUP BY PifNickName
	ORDER BY PifNickName

	SET NOCOUNT OFF;
END
