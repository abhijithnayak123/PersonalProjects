CREATE PROCEDURE [dbo].[USP_PP_GetValidationEngineBeneficiaryPaymentAmount]        
	@UserID INT,
	@Type Bit =1--auto 
AS         
	BEGIN TRY
       
		--  Initial Set statements  --        
		SET NOCOUNT ON;        
		SET LOCK_TIMEOUT                30000;   -- 30 seconds 
		
		
		---Declare Variable
		DECLARE @RuleID INT
		
		
		---Assigning value to Variable
		SELECT @RuleID = RuleID
		FROM TBL_PP_ValidationRule
		WHERE RuleName = '$0 beneficiary payment'
			AND RuleCategory = 'Beneficiary payment'
        
        
 		-- Body of procedure  --        
		---Return Data        
		SELECT PaymentType
			,StgData.ScheduleID
			,@RuleID AS RuleID
			,'BenePaymentAmount' AS Attribute
			,StgData.ScheduleAmount AS ActualValue
		FROM TBL_PP_STG_InnoTrustValidationEngineInput StgData
		WHERE PaymentType IN (
				'Beneficiarypayment'
				,'PGCalcImport'
				)
		AND UserID = @UserID

          
END TRY          
BEGIN CATCH

	SELECT ERROR_MESSAGE() AS ErrorMessage
	
END CATCH
SET NOCOUNT OFF; 