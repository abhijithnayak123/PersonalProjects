CREATE PROCEDURE [dbo].[USP_PP_InsStagingCGAPaymentDetail] @CreatedBy INT
AS
BEGIN
	SET NOCOUNT ON
	SET LOCK_TIMEOUT 30000

	TRUNCATE TABLE dbo.TBL_PP_STG_CGAPaymentDetail

	INSERT INTO dbo.TBL_PP_STG_CGAPaymentDetail (
		PaymentID
		,Account1
		,PaymentAmount
		,PersonCode
		,ContactID
		,GiftDate
		,IsDeleted
		,ModifiedBy
		,ModifiedDate
		,CreatedBy
		,CreatedDate
		)
	SELECT TPD.PaymentID
		,Account1
		,PaymentAmount
		,PersonCode
		,TPD.ContactID
		,GiftDate
		,0 AS Deleteflag
		,@CreatedBy AS ModifiedBy
		,GetDate() AS ModifiedDate
		,@CreatedBy AS CreatedBy
		,GetDate() AS CreatedDate
	FROM TBL_PP_PGCalcPaymentData TPD
	INNER JOIN TBL_PP_PendingPayment TPP
		ON TPD.PaymentID = TPP.PaymentID
	WHERE --05-feb-2014-Salih: Account Type mapping changes
		AccountType = 'GAP'
		OR AccountType = 'GAPR'
		OR AccountType = 'GAPP'
	ORDER BY PersonCode
		,GiftDate DESC
END
