CREATE FUNCTION [dbo].[FN_GetWithHoldingAmountForTrust]  
(  
 @ContactID INT,  
 @PaymentDate DATETIME,  
 @TaxYear INT  
)  
RETURNS Money  
AS  
BEGIN  
 DECLARE @Withholding MONEY
   
 SET @Withholding = 0;  
  
 
 SELECT @Withholding = SUM(ScheduledAmount) FROM TBL_PP_BeneficiaryPayoutSchedule    
 WHERE    
  DATEDIFF(DAY, PaymentDate, @PaymentDate) = 0 
  AND  TAXYear = @TaxYear 
  AND ContactID in (SELECT BenPay.ContactID FROM TBL_PP_BeneficiaryPayoutSchedule BenPay 
					INNER JOIN TBL_PP_BeneficiaryPayment BenPmnt ON BenPay.ContactID = BenPmnt.ContactID 
					WHERE BenPmnt.PaidforContactID = @ContactID ) 
  AND PaymentID NOT IN (SELECT PaymentID FROM TBL_PP_BeneficiaryPayment WHERE VoidDate IS NOT NULL)    
             GROUP BY PaymentDate,TaxYear  
  
 RETURN @Withholding  
END  