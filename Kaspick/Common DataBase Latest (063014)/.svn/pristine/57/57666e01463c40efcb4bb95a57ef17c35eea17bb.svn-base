CREATE FUNCTION [dbo].[FN_GetNAStatus] (@list_item_id INT)
RETURNS BIT
AS
BEGIN
	DECLARE @item_na BIT;
	DECLARE @ivan_value VARCHAR(100);

	SET @ivan_value = dbo.FN_GetItemName(@list_item_id)

	IF (
			@list_item_id <> 0
			AND @ivan_value IS NULL
			)
	BEGIN
		SET @item_na = 1
	END
	ELSE
	BEGIN
		SET @item_na = 0
	END

	RETURN @item_na
END
GO
