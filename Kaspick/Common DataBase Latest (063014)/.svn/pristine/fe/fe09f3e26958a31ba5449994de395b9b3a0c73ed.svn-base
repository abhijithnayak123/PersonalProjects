CREATE FUNCTION [dbo].[Fn_TBL_Retrieve_FileType] (
	@valuationID INT
	,@fileTypeName VARCHAR(100)
	)
RETURNS BIT
AS
BEGIN
	DECLARE @filetype BIT

	SELECT @filetype = 'true'
	FROM TBL_SIT_InterfaceFileGenerationLog IL
	INNER JOIN TBL_SIT_FileType FT ON IL.FileTypeID = FT.FileTypeID
	WHERE ValuationID = @valuationID
		AND FileTypeName = @fileTypeName

	RETURN @filetype
END
GO



