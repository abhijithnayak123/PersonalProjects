		SELECT *
		FROM sysobjects
		WHERE type = 'FN'
			AND NAME = 'FN_GetItemName'
		)
BEGIN
	DROP FUNCTION FN_GetItemName;

	PRINT 'DROPPED FUNCTION FN_GetItemName';
END
GO

