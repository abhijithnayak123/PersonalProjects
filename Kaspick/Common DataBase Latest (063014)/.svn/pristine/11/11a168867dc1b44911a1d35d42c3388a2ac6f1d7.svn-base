CREATE FUNCTION FN_GetItemName (@list_item_id INT)
RETURNS VARCHAR(100)
AS
BEGIN
	DECLARE @list_item_name VARCHAR(100)

	SELECT @list_item_name = ivanvalue
	FROM TBL_ListItem
	WHERE listitemid = @list_item_id

	RETURN @list_item_name
END
GO

