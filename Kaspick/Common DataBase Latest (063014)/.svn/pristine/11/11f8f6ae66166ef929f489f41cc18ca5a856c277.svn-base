CREATE PROCEDURE [dbo].[USP_PP_GetValidationEngineBeneficiaryOnHoldPayment]              
	@UserID INT,
	@Type Bit =1--auto                 
AS               
	BEGIN TRY             
		--  Initial Set statements  --              
		SET NOCOUNT ON;              
		SET LOCK_TIMEOUT                30000;   -- 30 seconds 
		
		---Declare Variable
		DECLARE @RuleID INT
		
		
		---Assigning value to Variable
		SELECT @RuleID = RuleID
		FROM TBL_PP_ValidationRule
		WHERE RuleName = 'Outstanding beneficiary payment'
			AND RuleCategory = 'Beneficiary payment'
              
             
              
		-- Body of procedure  --              
		--Rerurn data  
		SELECT PaymentType
			,StgData.ScheduleID
			,@RuleID AS RuleID
			,'DiffInPaymentDateFromCurrentDate' AS Attribute
			,convert(NVARCHAR(25), ABS(dbo.Fn_GetBusinessDaysDiff(StgData.PaymentDate, GETDATE()))) AS ActualValue
		FROM TBL_PP_STG_InnoTrustValidationEngineInput StgData
		INNER JOIN TBL_PP_BeneficiaryPayoutSchedule BenPay ON BenPay.BPScheduleID = StgData.ScheduleID
			AND StgData.PaymentType = 'Beneficiarypayment'
		WHERE BenPay.STATUS = 'OnHold'
		AND UserID = @UserID

		UNION ALL

		SELECT PaymentType
		,StgData.ScheduleID
		,@RuleID AS RuleID
		,'DiffInPaymentDateFromCurrentDate' AS Attribute
		,convert(NVARCHAR(25), ABS(dbo.Fn_GetBusinessDaysDiff(StgData.PaymentDate, GETDATE()))) AS ActualValue
		FROM TBL_PP_STG_InnoTrustValidationEngineInput StgData
		INNER JOIN TBL_PP_PGCalcPaymentDataMerged PGCalc ON PGCalc.MergedPGCalcPaymentID = StgData.ScheduleID
		AND StgData.PaymentType = 'PGCalcImport'
		WHERE PGCalc.STATUS = 'OnHold'
		AND UserID = @UserID
              
END TRY          
BEGIN CATCH

	SELECT ERROR_MESSAGE() AS ErrorMessage

END CATCH 
SET NOCOUNT OFF;