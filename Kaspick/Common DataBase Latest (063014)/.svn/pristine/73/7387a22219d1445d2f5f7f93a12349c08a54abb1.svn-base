CREATE PROCEDURE sp_dsNextDayInSet @day_set VARCHAR(20)
	,@seed_date DATETIME
OUTPUT AS

DECLARE @search_char CHAR(1)

WHILE (1 = 1)
BEGIN
	/* Convert day of week into a character */
	SELECT @search_char = CASE DATEPART(weekday, @seed_date)
			WHEN 1
				THEN 'U'
			WHEN 2
				THEN 'M'
			WHEN 3
				THEN 'T'
			WHEN 4
				THEN 'W'
			WHEN 5
				THEN 'R'
			WHEN 6
				THEN 'F'
			WHEN 7
				THEN 'S'
			END

	/* See if this day of week appears in @freq_day_occurrence */
	IF (CHARINDEX(@search_char, @day_set) > 0)
		BREAK

	/* Advance one day */
	SELECT @seed_date = DATEADD(day, 1, @seed_date)
END
