CREATE FUNCTION [dbo].[Fn_ReportGetDaysInYear] (@Year INT)
RETURNS INT
AS
BEGIN
	DECLARE @ReturnValue INT
	DECLARE @startDate DATETIME
	DECLARE @endDate DATETIME

	SET @startDate = cast('01/01/' + cast(@Year AS VARCHAR) AS DATETIME)
	SET @endDate = cast('12/31/' + cast(@Year AS VARCHAR) AS DATETIME)
	SET @ReturnValue = datediff(day, @startDate, @endDate) + 1

	RETURN @ReturnValue
END

