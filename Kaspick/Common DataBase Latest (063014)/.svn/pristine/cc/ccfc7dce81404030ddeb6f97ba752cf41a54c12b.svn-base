CREATE PROCEDURE [dbo].[USP_KS_GetUserApplication]
	-- paremeters here    
	@UserID INT
AS
--  Initial Set statements  --    
SET NOCOUNT ON;
SET LOCK_TIMEOUT 30000;-- 30 seconds    

-- Body of procedure  --    
SELECT AppMaster.ApplicationID
	,ApplicationName
FROM TBL_KS_Application AppMaster
INNER JOIN TBL_KS_UserApplication UserApp ON UserApp.ApplicationID = AppMaster.ApplicationID
	AND UserID = @UserID

SET NOCOUNT OFF;
	-- End of procedure  --    
