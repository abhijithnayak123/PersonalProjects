CREATE PROCEDURE [dbo].[USP_KS_GetUserID] (@LoginName AS VARCHAR(50))
AS
BEGIN
	DECLARE @UserID INT

	SELECT @UserID = CASE 
			WHEN IsActive = 1
				THEN UserID
			WHEN IsActive = 0
				THEN - 1
			ELSE 0
			END
	FROM TBL_KS_User
	WHERE LoginName = @LoginName

	SELECT isnull(@UserID, 0) AS 'UserID'
END
