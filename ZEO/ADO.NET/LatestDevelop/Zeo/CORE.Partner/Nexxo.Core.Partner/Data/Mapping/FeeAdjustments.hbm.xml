<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="MGI.Core.Partner"
                   namespace="MGI.Core.Partner.Data.Fees">

	<class name="FeeAdjustment" table="tChannelPartnerFeeAdjustments">
		<id name="rowguid" column="FeeAdjustmentPK">
			<generator class="guid"/>
		</id>
		<many-to-one name="channelPartner" class="MGI.Core.Partner.Data.ChannelPartner" column="ChannelPartnerPK" />
		<property name="TransactionType" />
		<property name="Name"/>
		<property name="Description"/>
		<property name="DTStart"/>
		<property name="DTEnd"/>
		<property name="SystemApplied"/>
		<property name="AdjustmentRate"/>
		<property name="AdjustmentAmount"/>
		<bag name="Conditions" cascade="all-delete-orphan" lazy="false">
			<key column="FeeAdjustmentPK"/>
			<one-to-many class="FeeAdjustmentCondition"/>
		</bag>
		<property name="DTServerCreate" not-null="true" update="false"/>
		<property name="DTServerLastModified" not-null="false" insert="false"/>
		<property name="PromotionType"/>
	</class>

	<class name="FeeAdjustmentCondition" table="tFeeAdjustmentConditions">
		<id name="rowguid" column="AdjConditionsPK">
			<generator class="guid"/>
		</id>
		<many-to-one name="feeAdjustment" class="FeeAdjustment" column="FeeAdjustmentPK" />
		<property name="Description"/>
		<property name="ConditionType" column="ConditionTypePK"/>
		<property name="CompareType" column="CompareTypePK"/>
		<property name="ConditionValue"/>
		<property name="DTServerCreate" not-null="true" update="false"/>
		<property name="DTServerLastModified" not-null="false" insert="false"/>
	</class>

	<class name="FeeAdjustmentConditionType" table="tFeeAdjustmentConditionTypes">
		<id name="Id" column="ConditionTypePK"/>
		<property name="Name"/>
	</class>

	<!--<class name="FeeAdjustmentCompareType" table="tFeeAdjustmentCompareType">
    <id name="Id"/>
    <property name="Name"/>
  </class>-->

	<class name="CustomerFeeAdjustments" table="tCustomerFeeAdjustments">
		<id name="rowguid" column="CustomerFeeAdjustmentsPK">
			<generator class="guid"/>
		</id>
		<property name="Id" generated="insert" update="false" insert="false">
			<column name="CustomerFeeAdjustmentsID" not-null="true" sql-type="bigint IDENTITY(1000000000,1)"/>
		</property>
		<many-to-one name="feeAdjustment" class="FeeAdjustment" column="FeeAdjustmentPK" />
		<property name="CustomerID"/>
		<property name="IsAvailed"/>
		<property name="DTServerCreate" not-null="true" update="false"/>
		<property name="DTServerLastModified" not-null="false" insert="false"/>
		<property name="DTTerminalCreate" column="DTTerminalCreate" not-null="true" update="false"/>
		<property name="DTTerminalLastModified" column="DTTerminalLastModified" not-null="false" />
	</class>
</hibernate-mapping>