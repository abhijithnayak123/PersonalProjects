@model TCF.Channel.Zeo.Web.Models.IdentificationInformation
@{
    ViewBag.Title = TCF.Channel.Zeo.Web.App_GlobalResources.Nexxo.IdentificationInformation;
    Layout = "~/Views/Shared/_Menu.cshtml";
}
<div align="center">
    <img src="@Url.Content("~/Content/images/Identification_" + @Model.ChannelPartnerName + ".png")" usemap="#@Model.ChannelPartnerName" />
</div>
<script src="@Url.Content("~/Scripts/Common/lib/jquery.maskedinput-1.3.js")" type="text/javascript"></script>
<script language="javascript" type="text/javascript">
    var base_url_GetStates = '@Url.Action("GetStates", "CustomerRegistration")';
    var base_url_GovtIdType = '@Url.Action("GovtIdType", "CustomerRegistration")';
    var base_url_GetIdRequirements = '@Url.Action("GetIdRequirements", "CustomerRegistration")';
    var CustomerSearchURL = '@Url.Action("CustomerSearch", "CustomerSearch")';
    $(document).ready(function () {
        $('#MotherMaidenName').focus();
        $("#IDIssuedDate").mask("99/99/9999");
        $("#IDExpireDate").mask("99/99/9999");
        $(function () {
            var option = {
                autoOpen: false,
                title: "Message",
                width: 400,
                draggable: false,
                resizable: false,
                closeOnEscape: false,
                modal: true,
                height: 160,
                cache: false
            };
            $("#dialog").dialog(option);
            if ('@ViewBag.ErrorMessage' != '') {
                $("#dialog").css("visibility", "visible");
                $("#dialog").dialog(option).dialog("open");
                return false;
            }
        	if('@ViewBag.ExpiredErrorMessage' != '' )
        	{
        		$('#btnBack').attr('disabled', 'disabled');
        		$('#btnBack').addClass('DisableButtons');
        	}
        });
        $('#btnEdit').click(function () {
            $('#EditIDExpiryDate').val('true');
            $('#dialog').dialog('destroy').remove();
        });

    });
</script>

<link href="@Url.Content("~/Content/css/Common/jquery-ui.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/jquery-grid/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/jquery-ui/redmond/jquery-ui-1.8.14.custom.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/jquery-ui/redmond/jquery-ui-1.9.2.custom.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/Common/Common.js?version=" + @DateTime.Now.Ticks)" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Common/DropdownScript.js?version=" + @DateTime.Now.Ticks)" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Common/NexxoCustomValidations.js?version=" + @DateTime.Now.Ticks)" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Customer/BaseCustomerValidator.js.axd")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Customer/" + @Model.ChannelPartnerName + "CustomerValidator.js.axd")" type="text/javascript"></script>

@using (Html.BeginForm("IdentificationInformation", "CustomerRegistration", FormMethod.Post, new { id = "frmIdentificationInformation" }))
{	
    @Html.Partial("_IdentificationInformation", Model)
    @Html.Partial("_IdentificationNavigation")
    <div id="dialog" style="visibility:hidden">
        @Html.Partial("_partialIdExpirationPopup")
    </div>
}
