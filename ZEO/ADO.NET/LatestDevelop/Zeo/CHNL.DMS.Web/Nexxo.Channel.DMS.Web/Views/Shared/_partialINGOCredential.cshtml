@model TCF.Channel.Zeo.Web.Models.ProcessorCrendential

@Html.HiddenFor(m => m.LocationID)
@Html.HiddenFor(m => m.ProviderID)
@Html.HiddenFor(m => m.ProcessorID)

<div class="row">
	<div>
		<label class="label_txt">@Html.RequiredField(@TCF.Channel.Zeo.Web.App_GlobalResources.Nexxo.UserName)</label>
		@Html.TextBoxFor(m => m.UserName, new { @class = "input_box", maxLength = "100",tabindex = 1 })
	</div>
	<div class="error_align_left align_left_processor">
		@Html.ValidationMessageFor(m => m.UserName)
	</div>
</div>
<div class="row">
	<div>
		<label class="label_txt">@Html.RequiredField(@TCF.Channel.Zeo.Web.App_GlobalResources.Nexxo.Password)</label>
		@Html.PasswordFor(m => m.Password, new { @class = "input_box", maxLength = "50", TextMode = "Password", tabindex = 1 })
	</div>
	<div class="error_align_left align_left_processor">
		@Html.ValidationMessageFor(m => m.Password)
	</div>
</div>
<div class="align_left_tabs" >
	<input type="button" value="Edit" class="EditCredential anc_link_btn yellow_btn add_rec" name="Edit" id="EditINGO" tabindex="1" />
	<input type="button" style="background-color: rgb(0, 105, 55)" value="Save" class="SaveCredential" name="Save" id="SaveINGO" tabindex="1" />
</div>

