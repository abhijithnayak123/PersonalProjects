@model TCF.Channel.Zeo.Web.Models.PersonalInformation
<script src="@Url.Content("~/Scripts/Common/lib/jquery.maskedinput-1.3.js")" type="text/javascript"></script>
<div class="row">
    <div>
        @Html.LabelFor(model => model.PrimaryPhone, new { @class = "row_label_txt" })
        @Html.TextBoxFor(model => model.PrimaryPhone, new { @class = "input_box", maxLength = "12", tabindex = 8, autocomplete = "off", @placeholder = "###-###-####" })
    </div>
    <div class="error_align_left cust_error_dis">
        @Html.ValidationMessageFor(model => model.PrimaryPhone)
    </div>
</div>
<div class="row">
    <div>
        @Html.LabelFor(model => model.PrimaryPhoneType, new { @class = "row_label_txt dropdown_width" })
        @Html.DropDownListFor(m => m.PrimaryPhoneType, Model.LPrimaryPhonetype, new { @class = "dropdown_box", tabindex = 9, autocomplete = "off" })
    </div>
    <div class="error_align_left cust_error_dis">
        @Html.ValidationMessageFor(model => model.PrimaryPhoneType)
    </div>
</div>
<div id="phoneProvider" class="row">
    <div>
        @Html.LabelFor(model => model.PrimaryPhoneProvider, new { @class = "row_label_txt dropdown_width" })
        @Html.DropDownListFor(m => m.PrimaryPhoneProvider, Model.LPrimaryPhoneProvider, new { @class = "dropdown_box", tabindex = 10, autocomplete = "off" })
    </div>
    <div class="error_align_left cust_error_dis">
        @Html.ValidationMessageFor(model => model.PrimaryPhoneProvider)
    </div>
</div>
<div class="row">
    <div>
        @Html.LabelFor(model => model.AlternativePhone, new { @class = "row_label_txt" })
        @Html.TextBoxFor(model => model.AlternativePhone, new { @class = "input_box", tabindex = 11, maxLength = "12", autocomplete = "off", onblur = "showAlternatePhType(this)", @placeholder = "###-###-####" })
    </div>
    <div class="error_align_left cust_error_dis">
        @Html.ValidationMessageFor(model => model.AlternativePhone)
    </div>
</div>
<div class="row hide" id="altPhType">
    <div>
        <label class="row_label_txt dropdown_width">
            Type
        </label>
        @Html.DropDownListFor(m => m.AlternativePhoneType, Model.LAlternatePhonetype, new { @class = "dropdown_box", tabindex = 12, autocomplete = "off" })
    </div>
    <div class="error_align_left cust_error_dis">
        @Html.ValidationMessageFor(model => model.AlternativePhoneType)
    </div>
    <div id="alternatePhoneProvider" class="row">
        <div>
            @Html.LabelFor(model => model.AlternativePhoneProvider, new { @class = "row_label_txt dropdown_width" })
            @Html.DropDownListFor(m => m.AlternativePhoneProvider, Model.LAlternatePhoneProvider, new { @class = "dropdown_box", tabindex = 13, autocomplete = "off" })
        </div>
        <div class="error_align_left cust_error_dis">
            @Html.ValidationMessageFor(model => model.AlternativePhoneProvider)
        </div>
    </div>
</div>
<div class="row">
    <div>
        @Html.LabelFor(model => model.Email, new { @class = "row_label_txt" })
        @Html.TextBoxFor(model => model.Email, new { @class = "input_box", tabindex = 14, autocomplete = "off", maxlength = "200", @title = @TCF.Channel.Zeo.Web.App_GlobalResources.Nexxo.Tooltip_Email })
    </div>
    <div class="error_align_left cust_error_dis">
        @Html.ValidationMessageFor(model => model.Email)
    </div>
</div>
<div class="row">
    <div>
        @Html.LabelFor(model => model.Address1, new { @class = "row_label_txt" })
        @Html.TextBoxFor(model => model.Address1, new { @class = "input_box", tabindex = 15, autocomplete = "off", @title = @TCF.Channel.Zeo.Web.App_GlobalResources.Nexxo.Tooltip_Address1 })
    </div>
    <div class="error_align_left cust_error_dis">
        @Html.ValidationMessageFor(model => model.Address1)
    </div>
</div>
<div class="row">
    <div>
        @Html.LabelFor(model => model.Address2, new { @class = "row_label_txt" })
        @Html.TextBoxFor(model => model.Address2, new { @class = "input_box", tabindex = 16, autocomplete = "off", @title = @TCF.Channel.Zeo.Web.App_GlobalResources.Nexxo.Tooltip_Address2 })
    </div>
    <div class="error_align_left cust_error_dis">
        @Html.ValidationMessageFor(model => model.Address2)
    </div>
</div>
<div class="row">
    <div>
        @Html.LabelFor(model => model.City, new { @class = "row_label_txt" })
        @Html.TextBoxFor(model => model.City, new { @class = "input_box", tabindex = 17, autocomplete = "off", @title = @TCF.Channel.Zeo.Web.App_GlobalResources.Nexxo.Tooltip_City })
    </div>
    <div class="error_align_left cust_error_dis">
        @Html.ValidationMessageFor(model => model.City)
    </div>
</div>
<div class="row">
    <div>
        @Html.LabelFor(model => model.State, new { @class = "row_label_txt dropdown_width" })
        <span class="leftDropDown">@Html.DropDownListFor(m => m.State, Model.LStates, new { @class = "dropdown_box", tabindex = 18, autocomplete = "off" })</span>
    </div>
    <div class="error_align_left cust_error_dis">
        @Html.ValidationMessageFor(model => model.State)
    </div>
</div>
<div class="row">
    <div>
        @Html.LabelFor(model => model.ZipCode, new { @class = "row_label_txt" })
        @Html.TextBoxFor(model => model.ZipCode, new { @class = "input_box", tabindex = 19, autocomplete = "off", maxLength = 5, @placeholder = "#####" })
    </div>
    <div class="error_align_left cust_error_dis">
        @Html.ValidationMessageFor(model => model.ZipCode)
    </div>
</div>
@if (ViewBag.IsMailingAddressEnable)
	{
<div class="row diff_mailid_txt">
    <div>
        @Html.LabelFor(model => model.MailingAddressDifferent, new { @class = "row_label_txt" })
        @Html.CheckBoxFor(m => Model.MailingAddressDifferent, new { tabindex = 20, autocomplete = "off", onclick = "showMailingAddress(this)" })
    </div>
    <div class="error_align_left cust_error_dis">
        @Html.ValidationMessageFor(model => model.MailingAddressDifferent)
    </div>
</div>
<div id="mailingAddress">
    <div class="row clear_both">
        <div>
            @Html.LabelFor(model => model.MailingAddress1, new { @class = "row_label_txt" })
            @Html.TextBoxFor(model => model.MailingAddress1, new { @class = "input_box", tabindex = 21, autocomplete = "off", @title = @TCF.Channel.Zeo.Web.App_GlobalResources.Nexxo.Tooltip_MailingAddress1 })
        </div>
        <div class="error_align_left cust_error_dis">
            @Html.ValidationMessageFor(model => model.MailingAddress1)
        </div>
    </div>
    <div class="row">
        <div>
            @Html.LabelFor(model => model.MailingAddress2, new { @class = "row_label_txt" })
            @Html.TextBoxFor(model => model.MailingAddress2, new { @class = "input_box", tabindex = 22, autocomplete = "off", @title = @TCF.Channel.Zeo.Web.App_GlobalResources.Nexxo.Tooltip_MailingAddress2 })
        </div>
        <div class="error_align_left cust_error_dis">
            @Html.ValidationMessageFor(model => model.MailingAddress2)
        </div>
    </div>
    <div class="row">
        <div>
            @Html.LabelFor(model => model.MailingCity, new { @class = "row_label_txt" })
            @Html.TextBoxFor(model => model.MailingCity, new { @class = "input_box", tabindex = 23, autocomplete = "off", @title = @TCF.Channel.Zeo.Web.App_GlobalResources.Nexxo.Tooltip_City })
        </div>
        <div class="error_align_left cust_error_dis">
            @Html.ValidationMessageFor(model => model.MailingCity)
        </div>
    </div>
    <div class="row">
        <div>
            @Html.LabelFor(model => model.MailingState, new { @class = "row_label_txt dropdown_width" })
            @Html.DropDownListFor(m => m.MailingState, Model.LStates, new { @class = "dropdown_box", tabindex = 24, autocomplete = "off" })
        </div>
        <div class="error_align_left cust_error_dis">
            @Html.ValidationMessageFor(model => model.MailingState)
        </div>
    </div>
    <div class="row">
        <div>
            @Html.LabelFor(model => model.MailingZipCode, new { @class = "row_label_txt" })
            @Html.TextBoxFor(model => model.MailingZipCode, new { @class = "input_box", tabindex = 25, autocomplete = "off", maxLength = 5, @placeholder = "#####" })
        </div>
        <div class="error_align_left cust_error_dis">
            @Html.ValidationMessageFor(model => model.MailingZipCode)
        </div>
    </div>
</div>
}
<script src="@Url.Content("~/Scripts/Customer/par_contactDetails.js?version=" + @DateTime.Now.Ticks)" type="text/javascript"></script>
<script type="text/javascript">

    $(document).ready(function () {
        $("#PrimaryPhone").mask("999-999-9999");
        $("#AlternativePhone").mask("999-999-9999");
        showAltPhType();
    	//AL-533: This variable is intiated in _common.cshtml 
    	//Developed by: Sunil Shetty || Date: 09\06\2015
        if (IsMailingAddressEnable != "False") {
        	document.getElementById("mailingAddress").style.display = $('#MailingAddressDifferent').is(':checked') ? "block" : "none";
        }
    });
</script>
