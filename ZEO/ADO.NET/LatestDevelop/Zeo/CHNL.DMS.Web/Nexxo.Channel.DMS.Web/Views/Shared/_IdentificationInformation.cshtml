@model TCF.Channel.Zeo.Web.Models.IdentificationInformation
@{
    Func<TCF.Channel.Zeo.Web.Models.IdentificationInformation, object> GovtIdIssueState = 
    @<text>
    @TCF.Channel.Zeo.Web.App_GlobalResources.Nexxo.GovtIdIssueState<span id="stateRequired" class="mandatory">*</span>
    </text>;

    Func<TCF.Channel.Zeo.Web.Models.IdentificationInformation, object> IDIssuedDate = 
    @<text>
    @TCF.Channel.Zeo.Web.App_GlobalResources.Nexxo.IDIssuedDate<span id="IdissueRequired" class="mandatory">*</span>
    </text>;

    Func<TCF.Channel.Zeo.Web.Models.IdentificationInformation, object> IDExpireDate = 
    @<text>
    @TCF.Channel.Zeo.Web.App_GlobalResources.Nexxo.IDExpireDate<span id="IdExpireRequired" style='color: red;'>*</span>
    </text>;
}


<input type="hidden" id="DateOfBirth" value="@ViewBag.DOB" />

<div class="row">
    <div>
        @Html.LabelFor(model => model.MotherMaidenName, new { @class = "row_label_txt" })
        @Html.TextBoxFor(model => model.MotherMaidenName, new { @class = "input_box", tabindex = "1", @title = @TCF.Channel.Zeo.Web.App_GlobalResources.Nexxo.Tooltip_MotherMaidenName })
    </div>
    <div class="error_align_left">
        @Html.ValidationMessageFor(model => model.MotherMaidenName)
    </div>
</div>
<div class="row">
    <div>
        @Html.LabelFor(model => model.CountryOfBirth, new { @class = "row_label_txt" })
        <span>@Html.DropDownListFor(model => model.CountryOfBirth, Model.LCountryOfBirth, new { @class = "dropdown_box", tabindex = "2" })</span>
    </div>
    <div class="error_align_left">
        @Html.ValidationMessageFor(model => model.CountryOfBirth)
    </div>
</div>
<div class="row">
	<div>
		@Html.LabelFor(model => model.PrimaryCountryCitizenShip, new { @class = "row_label_txt" })
		<span class="ieSpanDisplay">@Html.DropDownListFor(model => model.PrimaryCountryCitizenShip, Model.LPrimaryCountryCitizenship, new { @class = "dropdown_box", tabindex = "3" })</span>
	</div>
	<div class="error_align_left">
		@Html.ValidationMessageFor(model => model.PrimaryCountryCitizenShip)
	</div>
</div>
<div class="row">
	<div>
