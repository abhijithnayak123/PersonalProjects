	</div>
	<div class="error_align_left">
		@Html.ValidationMessageFor(model => model.SecondaryCountryCitizenShip)
	</div>
</div>
<div class="row">
	<div>
		@Html.LabelFor(model => model.LegalCode, new { @class = "row_label_txt" })
		<span class="ieSpanDisplay">@Html.DropDownListFor(model => model.LegalCode, Model.LLegalCodes, new { @class = "dropdown_box", tabindex = "5" })</span>
	</div>
	<div class="error_align_left">
		@Html.ValidationMessageFor(model => model.LegalCode)
	</div>
</div>
<div class="row">
    <div>
        @Html.LabelFor(model => model.Country, new { @class = "row_label_txt" })
        <span>@Html.DropDownListFor(model => model.Country, Model.LCountry, new { @class = "dropdown_box", tabindex = "6" })</span>
    </div>
    <div class="error_align_left">
        @Html.ValidationMessageFor(model => model.Country)
    </div>
</div>
<div class="row">
    <div>
        @Html.LabelFor(model => model.GovtIDType, new { @class = "row_label_txt" })
        <span class="ieSpanDisplay">@Html.DropDownListFor(model => model.GovtIDType, Model.LGovtIDType, new { @class = "dropdown_box", tabindex = "7" })</span>
    </div>
    <div class="error_align_left">
        @Html.ValidationMessageFor(model => model.GovtIDType)
    </div>
</div>
<div class="row">
    <div>
        <label class="row_label_txt">@GovtIdIssueState(@Model)</label>
        <span>@Html.DropDownListFor(model => model.GovtIdIssueState, Model.LStates, new { @class = "dropdown_box", tabindex = "8" })</span>
    </div>
    <div class="error_align_left">
        @Html.ValidationMessageFor(model => model.GovtIdIssueState)
    </div>
</div>
<div class="row">
    <div>
        @Html.LabelFor(model => model.GovernmentId, new { @class = "row_label_txt" })
        @Html.TextBoxFor(model => model.GovernmentId, new { @class = "input_box", tabindex = "9", @title = @TCF.Channel.Zeo.Web.App_GlobalResources.Nexxo.Tooltip_IDNumber })
    </div>
    <div class="error_align_left">
        @Html.ValidationMessageFor(model => model.GovernmentId)
    </div>
</div>
<div class="row">
    <div>
        <label class="row_label_txt">@IDIssuedDate(@Model)</label>
        @Html.TextBoxFor(model => model.IDIssuedDate, new { @class = "input_box", @placeholder = "MM/DD/YYYY", tabindex = "10" })
    </div>
    <div class="error_align_left">
        @Html.ValidationMessageFor(model => model.IDIssuedDate)
    </div>
</div>
<div class="row">
    <div>
		<label class="row_label_txt">@IDExpireDate(@Model)</label>
        @Html.TextBoxFor(model => model.IDExpireDate, new { @class = "input_box", @placeholder = "MM/DD/YYYY", tabindex = "11" })
