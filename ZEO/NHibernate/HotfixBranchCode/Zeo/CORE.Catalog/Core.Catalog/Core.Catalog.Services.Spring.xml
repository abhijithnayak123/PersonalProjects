<?xml version="1.0" encoding="utf-8" ?>
<objects xmlns="http://www.springframework.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xmlns:db="http://www.springframework.net/database"
		 xsi:schemaLocation="http://www.springframework.net http://www.springframework.net/xsd/spring-objects.xsd">

	<object id="SessionFactoryCatalog" type="Spring.Data.NHibernate.LocalSessionFactoryObject, Spring.Data.NHibernate32">
		<property name="MappingAssemblies">
			<list>
				<value>MGI.Core.Catalog</value>
			</list>
		</property>
		<property name="HibernateProperties">
			<dictionary>
				<entry key="connection.provider" value="NHibernate.Connection.DriverConnectionProvider" />
				<entry key="dialect" value="NHibernate.Dialect.MsSql2008Dialect" />
				<entry key="connection.driver_class" value="NHibernate.Driver.SqlClientDriver" />
				<entry key="show_sql" value="true" />
				<entry key="connection.connection_string" value="${PCATDBConnection.connectionString}" />
				<entry key="hibernate.current_session_context_class" value="call" />
			</dictionary>
		</property>
		<property name="ExposeTransactionAwareSessionFactory" value="true"/>
	</object>

	<object id="PartnerCatalogRepository" type="MGI.Common.DataAccess.Impl.NHibRepository&lt;MGI.Core.Catalog.Data.PartnerCatalog&gt;,  MGI.Common.DataAccess" >
		<property name="SessionFactory" ref="SessionFactoryCatalog"></property>
	</object>
	
	<object id="MasterCatalogRepository" type="MGI.Common.DataAccess.Impl.NHibRepository&lt;MGI.Core.Catalog.Data.MasterCatalog&gt;,  MGI.Common.DataAccess" >
		<property name="SessionFactory" ref="SessionFactoryCatalog"></property>
	</object>
	
	<object id="ProductService" type="MGI.Core.Catalog.Impl.ProductService, MGI.Core.Catalog">
		<property name="PartnerCatalogRepository" ref="PartnerCatalogRepository" />
		<property name="MasterCatalogRepository" ref="MasterCatalogRepository" />
	</object>

</objects>
