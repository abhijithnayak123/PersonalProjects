<?xml version="1.0" encoding="utf-8" ?>
<objects xmlns="http://www.springframework.net"
         xmlns:db="http://www.springframework.net/database">

  <import resource="assembly://MGI.Common/MGI.Common/MGICommon.xml" />

	<!-- Database and NHibernate Configuration -->
  <db:provider id="CxnCheckDbProvider"
          provider="SqlServer-2.0"
          connectionString="${CXNDBConnection.connectionString}"/>

  <!--<tx:attribute-driven/>-->
  
  <!--Session factory-->
  <object id="SessionFactoryCXNCheck" type="Spring.Data.NHibernate.LocalSessionFactoryObject, Spring.Data.NHibernate32">
    <property name="DbProvider" ref="CxnCheckDbProvider"/>
    <property name="MappingAssemblies">
      <list>
        <value>MGI.Cxn.Check.Chexar</value>
        <value>ChexarIO</value>
      </list>
    </property>
    <property name="HibernateProperties">
      <dictionary>
        <entry key="connection.provider" value="NHibernate.Connection.DriverConnectionProvider"/>
        <entry key="dialect" value="NHibernate.Dialect.MsSql2008Dialect"/>
        <entry key="connection.driver_class" value="NHibernate.Driver.SqlClientDriver"/>
        <entry key="show_sql" value="true"/>
      </dictionary>
    </property>
    <property name="ExposeTransactionAwareSessionFactory" value="true"/>
  </object>

  <object id="NHibChexarPartnerRepo" type="MGI.Common.DataAccess.Impl.NHibRepository&lt;MGI.Cxn.Check.Chexar.Data.ChexarPartner>, MGI.Common.DataAccess">
    <property name="SessionFactory" ref="SessionFactoryCXNCheck"/>
  </object>
  <object id="NHibChexarAccountRepo" type="MGI.Common.DataAccess.Impl.NHibRepository&lt;MGI.Cxn.Check.Chexar.Data.ChexarAccount>, MGI.Common.DataAccess">
    <property name="SessionFactory" ref="SessionFactoryCXNCheck"/>
  </object>
  <object id="NHibChexarSessionRepo" type="MGI.Common.DataAccess.Impl.NHibRepository&lt;MGI.Cxn.Check.Chexar.Data.ChexarSession>, MGI.Common.DataAccess">
    <property name="SessionFactory" ref="SessionFactoryCXNCheck"/>
  </object>
  <object id="NHibChexarTrxRepo" type="MGI.Common.DataAccess.Impl.NHibRepository&lt;MGI.Cxn.Check.Chexar.Data.ChexarTrx>, MGI.Common.DataAccess">
    <property name="SessionFactory" ref="SessionFactoryCXNCheck"/>
  </object>
  <object id="NHibCheckImageRepo" type="MGI.Common.DataAccess.Impl.NHibRepository&lt;MGI.Cxn.Check.Chexar.Data.CheckImage>, MGI.Common.DataAccess">
    <property name="SessionFactory" ref="SessionFactoryCXNCheck"/>
  </object>
  <object id="NHibCheckTypeMappingRepo" type="MGI.Common.DataAccess.Impl.NHibRepository&lt;MGI.Cxn.Check.Chexar.Data.ChexarCheckTypeMapping>, MGI.Common.DataAccess">
    <property name="SessionFactory" ref="SessionFactoryCXNCheck"/>
  </object>
  
  <object id="NHibChexarSimAccountRepo" type="MGI.Common.DataAccess.Impl.NHibRepository&lt;ChexarIO.SimEntities.ChexarSimAccount>, MGI.Common.DataAccess">
    <property name="SessionFactory" ref="SessionFactoryCXNCheck"/>
  </object>
  <object id="NHibChexarSimInvoiceRepo" type="MGI.Common.DataAccess.Impl.NHibRepository&lt;ChexarIO.SimEntities.ChexarSimInvoice>, MGI.Common.DataAccess">
    <property name="SessionFactory" ref="SessionFactoryCXNCheck"/>
  </object>
  
  <object id="ChexarWS" type="ChexarIO.ChexarSimulator, ChexarIO" autowire="byType">
    <property name="AccountRepo" ref="NHibChexarSimAccountRepo"></property>
    <property name="InvoiceRepo" ref="NHibChexarSimInvoiceRepo"></property>
  </object>
  
  <object id="IngoGateway" type="MGI.Cxn.Check.Chexar.Impl.ChexarGateway, MGI.Cxn.Check.Chexar">
    <property name="PartnerRepo" ref="NHibChexarPartnerRepo"/>
    <property name="AccountRepo" ref="NHibChexarAccountRepo"/>
    <property name="ChxrSessionRepo" ref="NHibChexarSessionRepo"/>
    <property name="ChxrTrxRepo" ref="NHibChexarTrxRepo"/>
    <property name="ImgRepo" ref="NHibCheckImageRepo"/>
    <property name="CheckTypeMappingRepo" ref="NHibCheckTypeMappingRepo"/>
    <property name="Chexar" ref="ChexarWS"></property>
    <property name="BranchUserNamePrefix" value="${BranchUserNamePrefix}"/>
    <property name="BranchPasswordPrefix" value="${BranchPasswordPrefix}"/>
    <property name="EmployeeUserNamePrefix" value="${EmployeeUserNamePrefix}"/>
    <property name="EmployeePasswordPrefix" value="${EmployeePasswordPrefix}"/>
    <property name="ChexarSessionSeperator" value="${ChexarSessionSeperator}"/>
    <property name="GetPendingStatusFromProcessor" value="true"/>
    <property name="NLogger" ref="NLoggerRef"></property>
	  <property name="MongoDBLogger" ref="TLoggerRef"/>
  </object>
</objects>