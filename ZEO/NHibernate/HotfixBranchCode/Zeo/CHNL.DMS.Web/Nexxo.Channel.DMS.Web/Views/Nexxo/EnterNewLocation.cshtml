<script src="@Url.Content("~/Scripts/Common/lib/jquery.maskedinput-1.3.js")" type="text/javascript"></script>
<script type="text/javascript">
    function ValidateKey(e, regex) {
        var enterKey = String.fromCharCode(!e.charCode ? e.which : e.charCode);
        if (regex.test(enterKey)) {
            return true;
        }
        e.preventDefault();
        return false;
    }

    $(document).ready(function () {
        $("#divUserSessionId").css("display", "");
    	$('input[type=text]').bind("paste", function (e) {
    		e.preventDefault();
    	});
        localStorage.removeItem('activeProcessorName');

        $("#Phone").mask("999-999-9999");

        var addEdit = '@Model.AddEdit';
        if (addEdit == "Enter New Locations") {
            $('#divAdd').show();
            $('#divEdit').hide();
        }
        else if (addEdit == "Edit Location") {
            $('#divAdd').hide();
            $('#divEdit').show();
        }
        var channelPartner = '@Model.ChannelPartnerName.ToLower()';
    	var regexIDNumber = /^([0-9])$/;
        var regexLocationIdForKeyRestrict = /^[a-zA-Z0-9_#&\-\'/\s]*$/;
        var regexLocationId = /^[a-zA-Z0-9]{1}[a-zA-Z0-9_#&\-\'/\s]*$/;
        var regexLocationName = /^[a-zA-Z0-9_#&\-\'/\s]*$/;
        var regexAddress = /^(?!.*(P|p)\.? ?(O|o)\.? ?(Box|bOx|boX|BOX|BOx|box))[-a-zA-Z\d .,/@@#!]*$/;
        var regexCity = /^[a-zA-Z .-]*$/;
        var regexZipCode = /^(\d)(?!\1{4}$)\d*$/;

        if (channelPartner == "synovus" || channelPartner == "tcf") {
            $('#BankID').rules("add", {
                required: true,
                messages: {
                    required: '@MGI.Channel.DMS.Web.App_GlobalResources.Nexxo.LocationBankIDRequired'
                }
            });

            $('#BankID').keypress(function (e) {
                ValidateKey(e, regexIDNumber);
            });

            $('#BranchID').rules("add", {
                required: true,
                messages: {
                    required: '@MGI.Channel.DMS.Web.App_GlobalResources.Nexxo.LocationBranchIDRequired'
                }
            });

            $('#BranchID').keypress(function (e) {
                ValidateKey(e, regexIDNumber);
            });
        }
    	if (channelPartner == "carver")
    	{
    		$('#BankID').keypress(function (e) {
    			ValidateKey(e, regexIDNumber);
    		});
    		$('#BranchID').keypress(function (e) {
    			ValidateKey(e, regexIDNumber);
    		});
    	}

        $('#LocationIdentifier').rules("add", {
            required: true,
            regex: regexLocationId,
            messages: {
                required: '@MGI.Channel.DMS.Web.App_GlobalResources.Nexxo.LocationLocationIDRequired',
                minlength: '@MGI.Channel.DMS.Web.App_GlobalResources.Nexxo.LocationLocationIDLength',
                regex: '@MGI.Channel.DMS.Web.App_GlobalResources.Nexxo.LocationLocationIDRegex'
            }
        });

        $('#LocationIdentifier').keypress(function (e) {
            ValidateKey(e, regexLocationIdForKeyRestrict);
        });

        $('#LocationName').rules("add", {
            required: true,
            messages: {
                required: '@MGI.Channel.DMS.Web.App_GlobalResources.Nexxo.LocationLocationNameRequired',
            }
        });

        $('#LocationName').keypress(function (e) {
            ValidateKey(e, regexLocationName);
        });

        $('#Address1').rules("add", {
            required: true,
            regex: regexAddress,
            messages: {
                required: '@MGI.Channel.DMS.Web.App_GlobalResources.Nexxo.LocationAddress1Required',
                regex: '@MGI.Channel.DMS.Web.App_GlobalResources.Nexxo.LocationAddress1Regex'
            }
        });

        $('#Address1').keypress(function (e) {
            ValidateKey(e, regexAddress);
        });

        $('#Address2').rules("add", {
            regex: regexAddress,
            messages: {
                regex: '@MGI.Channel.DMS.Web.App_GlobalResources.Nexxo.LocationAddress2Regex'
            }
        });

        $('#Address2').keypress(function (e) {
            ValidateKey(e, regexAddress);
        });

        $('#City').rules("add", {
            required: true,
            messages: {
                required: '@MGI.Channel.DMS.Web.App_GlobalResources.Nexxo.LocationCityRequired',
            }
        });

        $('#City').keypress(function (e) {
            ValidateKey(e, regexCity);
        });

        $('#ZipCode').rules("add", {
            required: true,
            regex: regexZipCode,
            messages: {
                required: '@MGI.Channel.DMS.Web.App_GlobalResources.Nexxo.LocationZipCodeRequired',
                regex: '@MGI.Channel.DMS.Web.App_GlobalResources.Nexxo.LocationZipCodeRegex'
            }
        });

        $('#ZipCode').keypress(function (e) {
            ValidateKey(e, regexZipCode);
        });
    });


</script>
