<?xml version="1.0" encoding="utf-8" ?>
<objects xmlns="http://www.springframework.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:db="http://www.springframework.net/database"
         xsi:schemaLocation="http://www.springframework.net http://www.springframework.net/xsd/spring-objects.xsd">
 
  <object type="Spring.Objects.Factory.Config.PropertyPlaceholderConfigurer, Spring.Core">
    <property name="ConfigSections" value="databaseSettings"/>
  </object>
  
  <db:provider id="CxnFundsDbProvider"
			provider="SqlServer-2.0"
			connectionString="Data Source=${CXNDataSource};Database=${CXNDatabase};User ID=${CXNUser};Password=${CXNPassword};"/>

  <!--Session factory-->
  <object id="SessionFactoryCXNFunds" type="Spring.Data.NHibernate.LocalSessionFactoryObject, Spring.Data.NHibernate32">
    <property name="DbProvider" ref="CxnFundsDbProvider"/>
    <property name="MappingAssemblies">
      <list>
        <value>.Data</value>
        <value>MGI.Cxn.Fund.FirstView.Data</value>
      </list>
    </property>
    <property name="HibernateProperties">
      <dictionary>
        <entry key="connection.provider" value="NHibernate.Connection.DriverConnectionProvider"/>
        <entry key="dialect" value="NHibernate.Dialect.MsSql2008Dialect"/>
        <entry key="connection.driver_class" value="NHibernate.Driver.SqlClientDriver"/>
        <entry key="show_sql" value="true"/>
      </dictionary>
    </property>
    <property name="ExposeTransactionAwareSessionFactory" value="true"/>
  </object>

  <object id="FirstViewCardRepo" type="MGI.Common.DataAccess.Impl.NHibRepository&lt;MGI.Cxn.Fund.FirstView.Data.FirstViewCard&gt;, MGI.Common.DataAccess.Impl">
    <property name="SessionFactory" ref="SessionFactoryCXNFunds"></property>
  </object>

  <object id="FirstViewCardAudRepo" type="MGI.Common.DataAccess.Impl.NHibRepository&lt;MGI.Cxn.Fund.FirstView.Data.FirstViewCard_Aud&gt;, MGI.Common.DataAccess.Impl">
    <property name="SessionFactory" ref="SessionFactoryCXNFunds"></property>
  </object>

  <object id="TSysAccountRepo" type="MGI.Common.DataAccess.Impl.NHibRepository&lt;.Data.TSysAccount>, MGI.Common.DataAccess.Impl">
    <property name="SessionFactory" ref="SessionFactoryCXNFunds"/>
  </object>
  
  <object id="DataMigrator" type="MGI.Cxn.Fund.DataProtectionMigrator.DataMigrator, DataProtectionMigrator">
    <property name="FvCardSvc" ref="FirstViewCardRepo"/>
    <property name="FvCardAudSvc" ref ="FirstViewCardAudRepo"/>
    <property name="TSysAccountSvc" ref="TSysAccountRepo"/>
  </object>
  
</objects>