@model MGI.Channel.DMS.Web.Models.ProfileSummary
@{
    ViewBag.Title = MGI.Channel.DMS.Web.App_GlobalResources.Nexxo.ProfileSummary;
    Layout = "~/Views/Shared/_Menu.cshtml";
}
<script src="@Url.Content("~/Scripts/Customer/BaseCustomerValidator.js.axd")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Customer/" + @Model.ChannelPartnerName + "CustomerValidator.js.axd")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('form').submit(function () {            
            var val = $('form').validate();
            if (val.valid()) {
                var submitbutton = $('input[type="submit"]');

                submitbutton.addClass('DisableSubmitButtons')
                    .addClass('OpaqueViewCart')
                    .attr('disabled', 'disabled');

                $('.aLinkButton').addClass('DisableHyperLinks')
                    .addClass('OpaqueViewCart')
                    .attr('disabled', 'disabled');
            }
            else {
            	showExceptionPopupMsg("MGiAlloy | 0.0 |Incomplete Customer Profile|Please fill all required details");
            }
        });
    });
</script>
<h2 align="center">
@if (Session["ClosedCustomerProfile"] != null && Session["ClosedCustomerProfile"] == "true" || Convert.ToInt32((Session["UserRoleId"])) == (int)UserRoles.Tech || Convert.ToInt32((Session["UserRoleId"])) == (int)UserRoles.ComplianceManager)
{
	<div align="center">
		<img src="@Url.Content("~/Content/images/Summary_" + @Model.ChannelPartnerName + ".png")" />
	</div>
}
else
{
	<div align="center">
		<img class="nav_disable" src="@Url.Content("~/Content/images/Summary_" + @Model.ChannelPartnerName + ".png")" usemap="#@Model.ChannelPartnerName" />
	</div>
}
	
   
</h2>
@using (Html.BeginForm("ProfileSummary", "CustomerRegistration", FormMethod.Post, new { id = "frmProfileSummary" }))
{
    <div class="field-validation-error">
        @Html.ValidationSummary(true)
    </div>
    <div align="center" class="error_txt">@ViewBag.ExceptionMessage</div>
    <br />
    <div>
        <p class="profile_heading row5"> Personal Information </p>
    </div>
        
    @Html.Partial("_ProfileSummary", Model)       
