@model MGI.Channel.DMS.Web.Models.AgentTransactionHistory
@{
    ViewBag.Title = MGI.Channel.DMS.Web.App_GlobalResources.Nexxo.TellerTransactionHistory;
    Layout = "~/Views/Shared/_Menu.cshtml"; 
}
<script src="@Url.Content("~/Scripts/Common/lib/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Common/lib/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Common/lib/jquery-grid/grid.locale-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Common/lib/jquery-grid/jquery.jqGrid.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Common/lib/spin.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/TransactionHistory/AgentTransHistory.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Common/Common.js")" type="text/javascript"></script>

<script type="text/javascript">
    var isAgentTeller = '@ViewBag.IsAgentTeller';
</script>

@using (Html.BeginForm())
{
	
<input type ="hidden" id = "PrintError" value = "@MGI.Channel.DMS.Web.App_GlobalResources.Nexxo.PrintError" />	
	
<div class="agent_trns_his_wrap">
    <div>
        <ul class="page_head product_head">
            <li>Transaction History</li>
        </ul>
    </div>
    <br />
	@Html.Partial("_partialSpinner")
    <div class="agent_trans">
        <div class="trans_column">
            @Html.LabelFor(model => model.TransactionType)
            @Html.DropDownListFor(model => model.TransactionType, Model.TransactionTypes, new { @class = "trans_input" })
        </div>
        <div class="trans_column_short">
            @Html.LabelFor(model => model.Agent)
            @Html.DropDownListFor(model => model.Agent, Model.Agents, new { @class = "trans_input" })
        </div>
        

        <div class="trans_column trans_top_fix">
            @Html.LabelFor(model => model.TransactionID)
            @Html.TextBoxFor(model => model.TransactionID, null, new { @class = "trans_input trans_his_txt", @maxlength = "19" })
            <div class="float_left"> @Html.ValidationMessageFor(model => model.TransactionID) </div>        
        </div>              

        <div class="search_wrap">
            <div class="search_row">
                <span class="trans_history_ldl">Date : </span>                    
                <span class="trans_history_ldl">@DateTime.Now.ToString("MMMM dd yyyy") </span>
            </div>
            <div class="trans_history_ldl">
                @Html.LabelFor(model => model.IsTransactionStatusSelected, new { @class = "trans_history_ldl trans_his_head" })
                @Html.CheckBoxFor(model => model.IsTransactionStatusSelected, new { @class = "trans_history_ldl trans_his_sel" })
            </div>
            <div class="float_left">
                <input type="submit" id="map" value="Search"/>
            </div>
        </div>
    </div>
</div>
}

<div class="trans_grid_tab_wrap" id="griddiv">
    <div>
        <span id="trancnt" class="shp_cart trans_grid_shp_left"></span>
    </div>
    <div class="trans_grid_tab" id="divJqTable">
        <table id="jqTable1" class="scroll"> </table>
        <div id="jqTablePager" />
    </div>
</div>
<div> &nbsp;</div>

