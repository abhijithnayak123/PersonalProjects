        {
            @Html.RadioButtonFor(model => model.IsReferral, "true", new { Checked = "checked" })  <span> Yes &nbsp;&nbsp;</span>    
            @Html.RadioButtonFor(model => model.IsReferral, "false")  <span>No</span>
        }
