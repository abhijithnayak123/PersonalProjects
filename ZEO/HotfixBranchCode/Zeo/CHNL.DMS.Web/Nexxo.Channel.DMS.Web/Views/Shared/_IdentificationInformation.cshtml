@model MGI.Channel.DMS.Web.Models.IdentificationInformation
@{
    Func<MGI.Channel.DMS.Web.Models.IdentificationInformation, object> GovtIdIssueState = 
    @<text>
    @MGI.Channel.DMS.Web.App_GlobalResources.Nexxo.GovtIdIssueState<span id="stateRequired" class="mandatory">*</span>
    </text>;

    Func<MGI.Channel.DMS.Web.Models.IdentificationInformation, object> IDIssuedDate = 
    @<text>
    @MGI.Channel.DMS.Web.App_GlobalResources.Nexxo.IDIssuedDate<span id="IdissueRequired" class="mandatory">*</span>
    </text>;

    Func<MGI.Channel.DMS.Web.Models.IdentificationInformation, object> IDExpireDate = 
    @<text>
    @MGI.Channel.DMS.Web.App_GlobalResources.Nexxo.IDExpireDate<span id="IdExpireRequired" style='color: red;'>*</span>
    </text>;
}

<input type="hidden" id="customerMinimumAge" value="@Model.channelPartner.CustomerMinimumAge" />
<input type="hidden" id="minimumAgeMessage" value="@Model.CustomerMinimumAgeMessage" />

<div class="row">
    <div>
        @Html.LabelFor(model => model.MotherMaidenName, new { @class = "row_label_txt" })
