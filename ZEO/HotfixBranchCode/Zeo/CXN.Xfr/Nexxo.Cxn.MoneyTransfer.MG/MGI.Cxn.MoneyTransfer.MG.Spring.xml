<?xml version="1.0" encoding="utf-8" ?>
<objects xmlns="http://www.springframework.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:db="http://www.springframework.net/database"
  xsi:schemaLocation="http://www.springframework.net http://www.springframework.net/xsd/spring-objects.xsd">

	<import resource="assembly://MGI.CXN.MG.Common/MGI.CXN.MG.Common/MGI.CXN.MG.Common.Spring.xml"/>

  <db:provider id="MGCXNDbProvider"
		  provider="SqlServer-2.0"
		  connectionString="${CXNDBConnection.connectionString}"/>

	<object id="SessionFactoryCXNMG" type="Spring.Data.NHibernate.LocalSessionFactoryObject, Spring.Data.NHibernate32">
		<property name="DbProvider" ref="MGCXNDbProvider"/>
		<property name="MappingAssemblies">
			<list>
				<value>MGI.Cxn.MoneyTransfer</value>
				<value>MGI.Cxn.MoneyTransfer.MG</value>
				<value>MGI.CXN.MG.Common</value>
			</list>
		</property>
		<property name="HibernateProperties">
			<dictionary>
				<entry key="connection.provider" value="NHibernate.Connection.DriverConnectionProvider" />
				<entry key="dialect" value="NHibernate.Dialect.MsSql2008Dialect" />
				<entry key="connection.driver_class" value="NHibernate.Driver.SqlClientDriver" />
				<entry key="show_sql" value="true" />
			</dictionary>
		</property>
		<property name="ExposeTransactionAwareSessionFactory" value="true"/>
	</object>

	<object id="CXNMoneyTransferMGProcessor" type="MGI.Cxn.MoneyTransfer.MG.Impl.Gateway, MGI.Cxn.MoneyTransfer.MG">
		<property name="ReceiverRepo" ref="ReceiverRepository" />
		<property name="MGTransactionLogRepo" ref="MGTransactionLogRepo" />
		<property name="MGAccountRepo" ref="MGAccountRepo" />
		<property name="CountryRepo" ref="CountryRepository" />
		<property name="StateRepo" ref="StateRepository" />
		<property name="DeliveryOptionRepo" ref="DeliveryOptionRepository" />
		<property name="CountryCurrencyRepo" ref="CountryCurrencyRepository" />
		<property name="StateRegulatorRepo" ref="StateRegulatorRepository"/>
		<property name="IO" ref="IO"/>
		<property name="MoneyGramCommonIO" ref="MoneyGramCommonIO"/>
    <property name="NLogger" ref="NLoggerRef"></property>
		<property name="MongoDBLogger" ref="TLoggerRef"/>
	</object>

	<object id="MGTransactionLogRepo" type="MGI.Common.DataAccess.Impl.NHibRepository&lt;MGI.Cxn.MoneyTransfer.MG.Data.Transaction&gt;, MGI.Common.DataAccess">
		<property name="SessionFactory" ref="SessionFactoryCXNMG"></property>
	</object>

	<object id="ReceiverRepository" type="MGI.Common.DataAccess.Impl.NHibRepository&lt;MGI.Cxn.MoneyTransfer.MG.Data.Receiver&gt;, MGI.Common.DataAccess">
		<property name="SessionFactory" ref="SessionFactoryCXNMG"></property>
	</object>

	<object id="MGAccountRepo" type="MGI.Common.DataAccess.Impl.NHibRepository&lt;MGI.Cxn.MoneyTransfer.MG.Data.Account&gt;, MGI.Common.DataAccess">
		<property name="SessionFactory" ref="SessionFactoryCXNMG"></property>
	</object>

	<object id="CountryRepository" type="MGI.Common.DataAccess.Impl.NHibRepository&lt;MGI.Cxn.MoneyTransfer.MG.Data.Country&gt;, MGI.Common.DataAccess">
		<property name="SessionFactory" ref="SessionFactoryCXNMG"></property>
	</object>

	<object id="StateRepository" type="MGI.Common.DataAccess.Impl.NHibRepository&lt;MGI.Cxn.MoneyTransfer.MG.Data.State&gt;, MGI.Common.DataAccess">
		<property name="SessionFactory" ref="SessionFactoryCXNMG"></property>
	</object>

	<object id="DeliveryOptionRepository" type="MGI.Common.DataAccess.Impl.NHibRepository&lt;MGI.Cxn.MoneyTransfer.MG.Data.DeliveryOption&gt;, MGI.Common.DataAccess">
		<property name="SessionFactory" ref="SessionFactoryCXNMG"></property>
	</object>

	<object id="CountryCurrencyRepository" type="MGI.Common.DataAccess.Impl.NHibRepository&lt;MGI.Cxn.MoneyTransfer.MG.Data.CountryCurrency&gt;, MGI.Common.DataAccess">
		<property name="SessionFactory" ref="SessionFactoryCXNMG"></property>
	</object>

	<object id="StateRegulatorRepository" type="MGI.Common.DataAccess.Impl.NHibRepository&lt;MGI.Cxn.MoneyTransfer.MG.Data.StateRegulator&gt;, MGI.Common.DataAccess">
		<property name="SessionFactory" ref="SessionFactoryCXNMG"></property>
	</object>

	<object id="IO" type ="MGI.Cxn.MoneyTransfer.MG.Impl.${ProviderIO}, MGI.Cxn.MoneyTransfer.MG">
		<property name="MongoDBLogger" ref="TLoggerRef"/>
	</object>

</objects>
