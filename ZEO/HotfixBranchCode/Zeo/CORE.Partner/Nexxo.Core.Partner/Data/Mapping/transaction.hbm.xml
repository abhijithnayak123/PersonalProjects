<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="MGI.Core.Partner"
                   namespace="MGI.Core.Partner.Data.Transactions">
	<class name="Transaction" abstract="true">
		<id name="rowguid" column="TxnPK">
			<generator class="guid"/>
		</id>
		<property name="Id" column="TransactionID"/>
		<property name="CXEId"/>
		<property name="CXNId"/>
		<property name="CXEState"/>
		<property name="CXNState"/>
		<property name="Amount"/>
		<property name="Fee"/>
		<property name="Description"/>
		<many-to-one name="CustomerSession" class="MGI.Core.Partner.Data.CustomerSession" column="CustomerSessionPK"/>
		<many-to-one name="Account" class="MGI.Core.Partner.Data.Account" column="AccountPK"/>
		<property name="DTTerminalCreate" not-null="true" update="false"/>
		<property name="DTTerminalLastModified" not-null="false" insert="false"/>
		<property name ="ConfirmationNumber"/>
		<property name="DTServerCreate" not-null="true" update="false"/>
		<property name="DTServerLastModified" not-null="false" insert="false"/>

		<union-subclass name="Cash" table="tTxn_Cash">
			<property name ="CashType"/>
		</union-subclass>

		<union-subclass name="Check" table="tTxn_Check">
			<property name="BaseFee"/>
			<property name="DiscountApplied"/>
			<property name="AdditionalFee"/>
			<property name="DiscountName"/>
			<property name="DiscountDescription"/>
			<property name="IsSystemApplied"/>
			<bag name="FeeAdjustments" cascade="all-delete-orphan" lazy="false">
				<key column="TxnPK"/>
				<one-to-many class="TransactionFeeAdjustment"/>
			</bag>
		</union-subclass>

		<union-subclass name="Funds" table="tTxn_Funds">
			<property name="BaseFee"/>
			<property name="DiscountApplied"/>
			<property name="AdditionalFee"/>
			<property name="DiscountName"/>
			<property name="DiscountDescription"/>
			<property name ="AddOnCustomerId"/>
			<property name="IsSystemApplied"/>
			<property name="FundType"/>
			<bag name="FeeAdjustments" cascade="all-delete-orphan" lazy="false">
				<key column="TxnPK"/>
				<one-to-many class="TransactionFeeAdjustment"/>
			</bag>
		</union-subclass>

		<union-subclass name="BillPay" table="tTxn_BillPay">
			<property name="ProductId"/>
			<property name="AccountNumber"/>
		</union-subclass>

		<union-subclass name="MoneyOrder" table="tTxn_MoneyOrder">
			<property name="BaseFee"/>
			<property name="DiscountApplied"/>
			<property name="AdditionalFee"/>
			<property name="DiscountName"/>
			<property name="DiscountDescription"/>
			<property name="IsSystemApplied"/>
			<property name="CheckNumber"/>
			<property name="AccountNumber"/>
			<property name="RoutingNumber"/>
			<bag name="FeeAdjustments" cascade="all-delete-orphan" lazy="false">
				<key column="TxnPK"/>
				<one-to-many class="TransactionFeeAdjustment"/>
			</bag>
		</union-subclass>

		<union-subclass name="MoneyTransfer" table="tTxn_MoneyTransfer">
			<property name="RecipientId"/>
			<property name="ExchangeRate"/>
			<property name="TransferType"/>
			<property name="TransactionSubType"/>
			<property name="OriginalTransactionId"/>
		</union-subclass>
	</class>

	<class name="TransactionFeeAdjustment" table="tTxn_FeeAdjustments">
		<id name="rowguid" column="TxnFeeAdjPK">
			<generator class="guid"/>
		</id>
		<many-to-one name="transaction" class="MGI.Core.Partner.Data.Transactions.Transaction" column="TxnPK" />
		<many-to-one name="feeAdjustment" class="MGI.Core.Partner.Data.Fees.FeeAdjustment" column="FeeAdjustmentPK" />
		<property name="DTServerCreate" not-null="true" update="false"/>
		<property name="DTServerLastModified" not-null="false" insert="false"/>
		<property name="IsActive" not-null="true"/>
	</class>
</hibernate-mapping>
