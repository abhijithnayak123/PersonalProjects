<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="MGI.Core.Partner" namespace="MGI.Core.Partner.Data">
	<class name="Permission" table="tPermissions" lazy="false">
		<id name="rowguid" column="PermissionsPK" >
		</id>
		<property name="Id" column="PermissionsID"/>			
		<property name="PermissionName" column="Permission"  />
		<property name="DTServerCreate" column="DTServerCreate" not-null="true" update="false" />
		<property name="DTServerLastModified" column="DTServerLastModified" not-null="false" insert="false" update="false" />
		<set name="PermissionsRoles" inverse="true" table="tUserRolesPermissionsMapping">
			<key column="PermissionId"/>
			<one-to-many class="UserRolePermission"/>
		</set>
	</class>
</hibernate-mapping>