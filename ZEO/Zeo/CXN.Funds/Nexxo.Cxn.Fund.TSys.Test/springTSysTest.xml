<?xml version="1.0" encoding="utf-8" ?>
<objects xmlns="http://www.springframework.net"
         xmlns:db="http://www.springframework.net/database"
         xmlns:tx="http://www.springframework.net/tx">

  <object id="CXNFundsDataProtectionSimulator" type="MGI.Common.DataProtection.Impl.DataProtectionSimulator, MGI.Common.DataProtection"/>

  <import resource="assembly://MGI.Cxn.Fund.TSys/MGI.Cxn.Fund.TSys/CxnTSysSpring.xml"/>

  <!--Transaction support-->
  <object id="transactionManager"
        type="Spring.Data.NHibernate.HibernateTxScopeTransactionManager, Spring.Data.NHibernate32">
    <property name="DbProvider" ref="CxnFundsTSysDbProvider"/>
    <property name="SessionFactory" ref="SessionFactoryCXNFundsTSys"/>
  </object>

  <object type="Spring.Objects.Factory.Config.VariablePlaceholderConfigurer, Spring.Core">
    <property name="VariableSources">
      <list>
        <object type="Spring.Objects.Factory.Config.ConnectionStringsVariableSource, Spring.Core"/>
        <object type="Spring.Objects.Factory.Config.ConfigSectionVariableSource, Spring.Core">
          <property name="SectionNames" value="appSettings">
          </property>
        </object>
      </list>
    </property>
  </object>

  <tx:attribute-driven/>

</objects>