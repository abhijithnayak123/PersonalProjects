@model TCF.Channel.Zeo.Web.Models.SystemMessage

<script type="text/javascript">
	var cancelMTTransactionURL = '@Url.Action("CancelMTTransaction", "CancelTransaction")';
</script>

<script src="@Url.Content("~/Scripts/SendMoney/DoddFrankPrint.js?version=" + @DateTime.Now.Ticks)" type="text/javascript"></script>

<div class="system_msg_wrap">
	<div class="m_type">
		@Html.LabelFor(model => model.Type)
		<span class="m_type_span">@Html.DisplayFor(model => model.Type, new { @disabled = "disabled" })</span>
	</div>
	<div class="m_num">
		@Html.LabelFor(model => model.Number)
		<span class="m_num_span">@Html.DisplayFor(model => model.Number, new { @disabled = "disabled" })</span>
	</div>
	<br />
	<br />
	<div class="float_left">
		@Html.LabelFor(model => model.Message)
		@{
			string errorimgUrl = Url.Content(string.Format("~/Content/images/error.jpg"));
			<img width="23" height="23" alt=" " src="@errorimgUrl" class="m_err_img">
		}
	</div>
	<div class="m_msg_wrap">
		@Model.Message
	</div>
	<br />
	<br />
    @if (!string.IsNullOrWhiteSpace(Model.AddlDetails))
    {
        <div class="clear_both float_left">
            @Html.LabelFor(model => model.AddlDetails, new { @class = "m_add_det" })
        </div>
        <div class="m_add_det_lbl">
            @Model.AddlDetails
        </div>
    }
    <div class="txt_center_padding">
        <ul>
            <li class="row_width30">
                <input type="button" value="Retry & Continue" id="btnRetry" class="green_input push_top10_fix" onclick="PrintPDSReceipt();" />
            </li>&nbsp;

			<li class="row_width30">
				<input type="button" value="Cancel Transaction" id="btnCancel" onclick="PDSPrintWarningPopup();" />
			</li>
		</ul>
	</div>
</div>


<script type="text/javascript">
	$(document).ready(function () {
		$('#btnRetry').focus();
	});
</script>