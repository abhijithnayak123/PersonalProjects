@model TCF.Channel.Zeo.Web.Models.PromotionSearch
@{
    ViewBag.Title = "Promotion History";
    Layout = "~/Views/Shared/_Menu.cshtml";
}
<link href="@Url.Content("~/Content/css/Common/jquery-ui.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/jquery-grid/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/jquery-ui/redmond/jquery-ui-1.8.14.custom.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/jquery-ui/redmond/jquery-ui-1.9.2.custom.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/Common/lib/jquery-grid/grid.locale-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Common/lib/jquery-grid/jquery.jqGrid.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Common/lib/jquery.maskedinput-1.3.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Promotion/Promotion.js?version=" + @DateTime.Now.Ticks)" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Promotion/PromotionGrid.js?version=" + @DateTime.Now.Ticks)" type="text/javascript"></script>
<script type="text/javascript">
    var getPromotions_Url = '@Url.Action("GetPromotionGrid", "Promotion")';
    var getProviders_Url = '@Url.Action("GetProviders", "Promotion")';
    var EditPromotion_Url = '@Url.Action("AddPromotion", "Promotion")';
    var ShowPopPromotion_Url = '@Url.Action("ShowPromotionDetails", "Promotion")';
    var ShowConfirmationPopUp_Url = '@Url.Action("ShowConfirmationPopUp", "Promotion")';
    var DeletePromotion_Url = '@Url.Action("DeletePromotion", "Promotion")';
    var Update_Promotion_Status_Url = '@Url.Action("UpdatePromotionStatus", "Promotion")';
    var ShowConfirmationPopUpStatus_Url = '@Url.Action("ShowConfirmationPopUpForStatus", "Promotion")';
    $(document).ready(function () {
        getPromotions();
    });
</script>

@* Main div *@
<div class="">
    @Html.Partial("_partialSpinner")
    @* Search filter div *@
    <div class="promo-container">
        <div class="promo_container_border promo-fonts">

            <div class="grid_header">
                <ul class="">
                    <li>Search</li>
                </ul>
            </div>
            <br />
            <br />
            <div class="promo-padding">
                @using (Html.BeginForm())
            {
                    <div class="">
                        <div class="promo-display-inline promo-row">
                            <div class="widht-column">
                                @Html.LabelFor(model => model.PromotionName)
                            </div>
                            <div class="widht-column">
                                @Html.LabelFor(model => model.ProductType)
                            </div>
                        </div>
                        <div class="promo-display-inline promo-row">
                            <div class="widht-column">
                                @Html.TextBoxFor(model => model.PromotionName, new { @class = "promoname-textbox", tabindex = 1, @maxlength = 15 })
                            </div>
                            <div class="widht-column">
                                @Html.DropDownListFor(model => model.ProductType, Model.ProductTypes, new { @class = "promo-drop", tabindex = 1 })
                            </div>
                            <div class="widht-column">
                                @Html.CheckBoxFor(model => model.ShowExpired, new { tabindex = 1 }) @Html.LabelFor(model => model.ShowExpired)
                                <a href="#" class="tooltip" bubbletooltipright="@TCF.Channel.Zeo.Web.App_GlobalResources.Nexxo.ShowExpiredToolTip">
                                    <img src="~/Content/images/Information.png" />
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="margin_top_two">
                        <div class="search-row2">
                            <div class="">
                                <label>Date Range</label>
                                @Html.TextBoxFor(model => model.StartDate, new { @class = "search-row-column2 date_picker_margin cFont", id = "promostartdatehis", readOnly = "true", placeholder = "MM/DD/YYYY" })
                                <label> &nbsp;&nbsp;To&nbsp;&nbsp;</label>
                                @Html.TextBoxFor(model => model.EndDate, new { @class = "search-row-column2 cFont", id = "promoenddatehis", readOnly = "true", placeholder = "MM/DD/YYYY" })
                            </div>
                        </div>
                    </div>

                    <div class="">
                        <div class="promo-row">
                            <div class="txt_right">
                                <ul>
                                    <li><input type="submit" class="float_left margin_top_0" value="Search" tabindex="1" /></li>
                                    <li>@Html.ActionLink("Add New Promo", "AddPromotion", "Promotion", null, new { @class = "anc_link_btn", tabindex = 1 })</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <br />
        @* List of promotion lable and add button *@
        <br />
        @* Grid div *@
        <div class="">
            <div class="clearfix"></div>
            <div class="trans_grid_tab_wrap" id="griddiv">
                <span id="promo_grid_header" class="shp_cart trans_grid_shp_left">List of Promotions</span>
                <div class="trans_grid_tab" id="divJqTable">
                    <table id="jqPromo" class="scroll word_wrap_text"> </table>
                    <div id="jqTablePromoPager"></div>
                </div>
                <div class="clearfix"></div>
            </div>

        </div>
    </div>
    <div class="clearfix"></div>
</div>
