    {
    <center>
        <div id="divViewBag" class="erro_txt">@ViewBag.ErrorMessage</div>
        <br />
    </center>
    }
    <div>
        <ul class="page_head product_head">
            <li class="fav_payee_banner_txt">Favorite Billers</li>
        </ul>
    </div>
    <div id="FrequentBillers">
        @Html.Partial("_partialFrequentPayees", Model)
    </div>
    <div>
        <ul class="page_head product_head">
            <li>Select New Biller</li>
        </ul>
    </div>
    <div id="Div_BillPayment">
        @Html.Partial("_MoneyGramBillPay", Model)
        <div class="bill_payment_btn_wrap">
            <ul>
               @*  <li>
	<input type="button" value="@TCF.Channel.Zeo.Web.App_GlobalResources.Nexxo.CancelButtonText" id="CancelTransaction" /></li>*@
				<li class="row_width60"><input type="button" value="@TCF.Channel.Zeo.Web.App_GlobalResources.Nexxo.CancelButtonText" onclick="_showCancelTransaction()" class="red_btn" /></li>
                <li>
                    <input type="submit" value="Next" class="anc_link_btn" id="Submit" />
                </li>
            </ul>
        </div>
    </div>
}