@model TCF.Channel.Zeo.Web.Models.MoneyGramBillPayViewModel
@{
    ViewBag.Title = "MoneyGramBillPayment";
    Layout = "~/Views/Shared/_Common.cshtml"; 
}
<script src="@Url.Content("~/Scripts/Billpay/MGBillpay.js?version=" + @DateTime.Now.Ticks)" type="text/javascript"></script>
<script type="text/javascript">
    var URL_AutoCompleteBillPayee = '@Url.Action("AutoCompleteBillPayee", "MoneyGramBillPayment")';
    var URL_PopulateBillFee = '@Url.Action("PopulateBillFee", "MoneyGramBillPayment")';
    var URL_PopulateDynamicControls = '@Url.Action("PopulateDynamicControls", "MoneyGramBillPayment")';
    var URL_PopulateBillpayee = '@Url.Action("PopulateBillpayee", "MoneyGramBillPayment")';
    var URL_PopulateBillerMessage = '@Url.Action("GetBillerInfo", "MoneyGramBillPayment")';
    var isException = '@ViewBag.IsException';
    if(isException=='True') {
      var FieldList = @Html.Raw(Json.Encode(Model.DynamicFields));
    }
    var varBillAmount1 = @Model.BillAmount1;
    var ViewBag_ErrorMessage = '@ViewBag.ErrorMessage';
    var Model_AccountAuthMask = '@Model.AccountAuthMask';
	var defaultErrorMessage = "Unknown error occured while getting data";
</script>
@using (Html.BeginForm("Validate", "MoneyGramBillPayment"))
{   
    @Html.Partial("_partialSpinner")
