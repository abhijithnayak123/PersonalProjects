@model TCF.Channel.Zeo.Web.Models.CustomerSearch

@{
    ViewBag.Title = TCF.Channel.Zeo.Web.App_GlobalResources.Nexxo.CustomerSearch;
    Layout = "~/Views/Shared/_Menu.cshtml";
}
<link href="@Url.Content("~/Content/css/Common/jquery-ui.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/jquery-grid/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/jquery-ui/redmond/jquery-ui-1.8.14.custom.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/jquery-ui/redmond/jquery-ui-1.9.2.custom.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/Common/lib/jquery-grid/grid.locale-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Common/lib/jquery-grid/jquery.jqGrid.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Common/lib/jquery.maskedinput-1.3.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Customer/SingleSearchScreen.js.axd?version=" + @DateTime.Now.Ticks)" type="text/javascript"></script>
<script src="@System.Web.Configuration.WebConfigurationManager.AppSettings["VoltagePieBaseUrl"]/encryption.js" language="JavaScript" type="text/javascript" id="pie_script"></script>
<script src="@System.Web.Configuration.WebConfigurationManager.AppSettings["VoltagePieBaseUrl"]/tcf/getkey.js" language="JavaScript" type="text/javascript"></script>

<script type="text/javascript">
    var CustomerSearchCriteriaFlag = '@ViewBag.CriteriaTag';
    var customerConformation = '@Url.Action("CustomerConformation", "CustomerSearch")';
    var noCustomerPopupUrl = '@Url.Action("DisplayNoCustomerPopup", "CustomerSearch")';
    var clearCustomerSearchSessionUrl = '@Url.Action("ClearCustomerSearchSession", "CustomerSearch")';

</script>
<div>
    @Html.Partial("_partialSpinner")
<div>
    <ul class="page_head product_head search_head_fix">
        <li>Find Customer</li>
    </ul>
</div>
<div class="cust_head_wrap">
    <ul class="page_head product_head cust_head">
        <li>Use one of the two search methods to find an existing customer </li>
    </ul>
</div>
    <div class="txt_center cust_summary_valid" id="valid">
        @Html.ValidationSummary(true)
    </div>
    <div class="clearfix"></div>
    <div id="NoRecords" class="txt_center cust_summary_error">
        <div>
            @if (ViewBag.ErrorMessage != null)
            {
                @ViewBag.ErrorMessage
            }
        </div>
    </div>
    <div class="cust_search_wrap">
        <div class="cust_search_options_new">
            <div class="top">
                @Html.Partial("_CustomerSearchByCard", Model)
            </div>
            <div class="bottom">
                @Html.Partial("_CustomerSearchByPKY", Model)
            </div>
            
        </div>
        <div class="cust_crit_search">
            <div class="cust_search_options_new">
                @Html.Partial("_CustomerSearchByCriteria", Model)
            </div>
        </div>
    </div>


    <div class="clearfix"></div>
    <div class="search_trans_grid_wrap hide" id="customer_search_grid_div">
        <div class=""> <span class="shp_cart">Select Customer:</span> </div>
        <div class="trans_grid_tab" id="">
            <table id="jqTable" class="scroll"></table>
            <div id="jqTablePager" />
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>
</div>
