<?xml version="1.0" encoding="utf-8" ?>
<objects xmlns="http://www.springframework.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:db="http://www.springframework.net/database"
   xmlns:tx="http://www.springframework.net/tx"
   xsi:schemaLocation="http://www.springframework.net http://www.springframework.net/xsd/spring-objects.xsd">

	<db:provider id="Cxn.Synovus.DbProvider"
        provider="SqlServer-2.0"
        connectionString="${PTNRDBConnection.connectionString}"/>

	<object id="SessionFactoryCXN" type="Spring.Data.NHibernate.LocalSessionFactoryObject, Spring.Data.NHibernate32">
		<property name="DbProvider" ref="Cxn.Synovus.DbProvider"/>
		<property name="MappingAssemblies">
			<list>
				<value>MGI.Biz.Synovus</value>
			</list>
		</property>
		<property name="HibernateProperties">
			<dictionary>
				<entry key="connection.provider" value="NHibernate.Connection.DriverConnectionProvider" />
				<entry key="dialect" value="NHibernate.Dialect.MsSql2008Dialect" />
				<entry key="connection.driver_class" value="NHibernate.Driver.SqlClientDriver" />
				<entry key="show_sql" value="true" />
			</dictionary>
		</property>
		<property name="ExposeTransactionAwareSessionFactory" value="true"/>
	</object>

	<import resource="assembly://MGI.Cxn.Customer.FIS/MGI.Cxn.Customer.FIS.Impl/Cxn.Customer.FIS.Services.Spring.xml"/>
	<import resource="assembly://MGI.Biz.FundsEngine/MGI.Biz.FundsEngine/Biz.Fund.xml"/>
	<import resource="assembly://MGI.Core.CXE/MGI.Core.CXE/CXESpring.xml"/>

	<object id ="InterceptedClientCustomerService" type="MGI.Biz.Synovus.Impl.SynovusCustomer,MGI.Biz.Synovus">
		<!--<property name="DBProvider" ref="Cxn.Synovus.DbProvider"/>-->
		<property name ="CxnClientCustomerService" ref="FISGateway"/>
		<property name ="CxnFISCustomer" ref="FISConnect"/>
		<property name="NLogger" ref="NLoggerRef"></property>
	</object>

	<object id="ClientCustomerService" type="Spring.Aop.Framework.ProxyFactoryObject, Spring.Aop">
		<property name="Target" ref="InterceptedClientCustomerService"/>
		<property name="InterceptorNames">
			<list>
				<value>ThrowsBizSynovusExceptionAdvice</value>
			</list>
		</property>
	</object>

	<object id="ThrowsBizSynovusExceptionAdvice" type="MGI.Biz.Synovus.Impl.Advice.ThrowsBizSynovusExceptionAdvice,MGI.Biz.Synovus"/>

	<object id="SynovusEventListenerDictionary" type="System.Collections.Generic.Dictionary&lt;string, MGI.Biz.Events.Contract.INexxoBizEventListener&gt;, mscorlib">
		<constructor-arg>
			<dictionary key-type="string" value-type="MGI.Biz.Events.Contract.INexxoBizEventListener">
				<entry key="GPRAdd">
					<ref object="SynovusGPRAddEventListener"/>
				</entry>
				<entry key="Customer-Registration">
					<ref object="SynovusCustomerRegistrationEventListener"/>
				</entry>
				<entry key="Customer-Edit">
					<ref object="SynovusCustomerEditEventListener"/>
				</entry>
			</dictionary>
		</constructor-arg>
	</object>

	<object id="SynovusGPRAddEventListener" type="MGI.Biz.Synovus.Impl.SynovusGprAddEventListener,MGI.Biz.Synovus">
		<property name ="CXNClientCustomerSvc" ref="FISGateway"/>
		<property name ="CXNClientFISRepo" ref="FISAccountRepo"/>
		<property name="NLogger" ref="NLoggerRef"></property>
	</object>
	<object id="SynovusCustomerRegistrationEventListener" type="MGI.Biz.Synovus.Impl.SynovusCustomerRegistrationEventListener,MGI.Biz.Synovus">
		<property name ="CXNClientCustomerSvc" ref="FISGateway"/>
		<property name ="CXNCustomerSvc" ref="FISConnect"/>
		<property name="ClientCustomerSvc" ref ="ClientCustomerService"/>
		<property name ="FISAccountRepo" ref="FISAccountRepo"/>
		<property name ="BIZFundsEngineSvc" ref="InterceptedBIZFundsEngine"/>
		<property name="PartnerCustomerService" ref="Core.Partner.CustomerService"/>
		<property name="CXECustomerService" ref="CXECustomerService"/>
	</object>
  
	<object id="SynovusCustomerEditEventListener" type="MGI.Biz.Synovus.Impl.SynovusCustomerEditEventListener,MGI.Biz.Synovus">
		<property name ="CXNClientCustomerSvc" ref="FISGateway"/>
		<property name ="CXNCustomerSvc" ref="FISConnect"/>
		<property name="ClientCustomerSvc" ref ="ClientCustomerService"/>
		<property name ="FISAccountRepo" ref="FISAccountRepo"/>
		<property name ="BIZFundsEngineSvc" ref="InterceptedBIZFundsEngine"/>
		<property name="PTNRCustomerService" ref="Core.Partner.CustomerService"/>
		<property name="CXECustomerService" ref="CXECustomerService"/>
	</object>
  
	<!-- END OF -::- belongs to the Synovus Impl configuration file. Move there - TODO ... -->
</objects>